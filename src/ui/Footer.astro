<style>
  /* Uses same variables as header */
  .site-footer {
    --brand: #9e1e3e;
    --brand-dark: #7a1730;
    --brand-light: #fdf2f4;
    --text: #1a1a1a;
    --text-muted: #666666;
    --text-light: #888888;
    --bg: #ffffff;
    --bg-subtle: #f8f9fa;
    --border: #e8e8e8;
  }

  .site-footer {
    background: var(--bg);
    border-top: 1px solid var(--border);
  }

  /* ========== Main Footer ========== */
  .footer-main {
    max-width: 1280px;
    margin: 0 auto;
    padding: 3.5rem 2rem;
  }

  .footer-grid {
    display: grid;
    grid-template-columns: 1.5fr 1fr 0.8fr 0.8fr 0.8fr;
    gap: 3rem;
  }

  /* ========== Brand Column ========== */
  .footer-brand-col {
    display: flex;
    flex-direction: column;
    gap: 1.25rem;
  }

  .footer-logo img {
    height: 48px;
    width: auto;
    border-radius: 6px;
  }

  .footer-tagline {
    font-size: 0.9375rem;
    line-height: 1.6;
    color: var(--text-muted);
    margin: 0;
    max-width: 280px;
  }

  .footer-contact-info {
    display: flex;
    flex-direction: column;
    gap: 0.625rem;
  }

  .footer-contact-link {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 0.875rem;
    color: var(--text-muted);
    text-decoration: none;
    transition: color 0.15s ease;
  }

  .footer-contact-link:hover {
    color: var(--brand);
  }

  .footer-contact-link svg {
    color: var(--brand);
    flex-shrink: 0;
  }

  .footer-social {
    display: flex;
    gap: 0.75rem;
    margin-top: 0.5rem;
  }

  .footer-social a {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 36px;
    height: 36px;
    color: var(--text-light);
    background: var(--bg-subtle);
    border-radius: 8px;
    transition: all 0.15s ease;
  }

  .footer-social a:hover {
    color: var(--brand);
    background: var(--brand-light);
  }

  /* ========== Footer Columns ========== */
  .footer-col {
    display: flex;
    flex-direction: column;
  }

  .footer-heading {
    font-size: 0.8125rem;
    font-weight: 600;
    color: var(--text);
    margin: 0 0 1.25rem;
    text-transform: uppercase;
    letter-spacing: 0.04em;
  }

  /* ========== Address ========== */
  .footer-address {
    font-style: normal;
    display: flex;
    flex-direction: column;
    gap: 1.25rem;
  }

  .footer-address-block p {
    margin: 0;
    font-size: 0.875rem;
    line-height: 1.5;
    color: var(--text-muted);
  }

  .footer-address-label {
    font-size: 0.75rem !important;
    font-weight: 500;
    color: var(--text-light) !important;
    margin-bottom: 0.25rem !important;
  }

  .footer-directions-link {
    display: inline-flex;
    align-items: center;
    margin-top: 1rem;
    font-size: 0.875rem;
    font-weight: 500;
    color: var(--brand);
    text-decoration: none;
    transition: color 0.15s ease;
  }

  .footer-directions-link:hover {
    color: var(--brand-dark);
  }

  /* ========== Navigation ========== */
  .footer-nav {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .footer-nav a,
  .footer-nav-btn {
    font-size: 0.875rem;
    color: var(--text-muted);
    text-decoration: none;
    transition: color 0.15s ease;
    background: none;
    border: none;
    padding: 0;
    cursor: pointer;
    font-family: inherit;
    text-align: left;
  }

  .footer-nav a:hover,
  .footer-nav-btn:hover {
    color: var(--brand);
  }

  /* ========== Bottom Bar ========== */
  .footer-bottom {
    background: var(--bg-subtle);
    border-top: 1px solid var(--border);
  }

  .footer-bottom-inner {
    display: flex;
    align-items: center;
    justify-content: space-between;
    max-width: 1280px;
    margin: 0 auto;
    padding: 0.875rem 2rem;
    gap: 1rem;
  }

  .footer-copyright {
    font-size: 0.75rem;
    color: var(--text-light);
    margin: 0;
    flex-shrink: 0;
  }

  .footer-legal-links {
    display: flex;
    align-items: center;
    gap: 1rem;
    flex-wrap: wrap;
    justify-content: center;
  }

  .footer-legal-links a,
  .footer-legal-btn {
    font-size: 0.75rem;
    color: var(--text-light);
    text-decoration: none;
    background: none;
    border: none;
    padding: 0;
    cursor: pointer;
    font-family: inherit;
    transition: color 0.15s ease;
    display: inline-flex;
    align-items: center;
    gap: 0.25rem;
  }

  .footer-legal-links a:hover,
  .footer-legal-btn:hover {
    color: var(--text-muted);
  }

  .footer-bottom-right {
    display: flex;
    align-items: center;
    gap: 1rem;
    font-size: 0.75rem;
    flex-shrink: 0;
  }

  .footer-nonprofit {
    color: var(--text-light);
  }

  .footer-credit {
    color: var(--text-light);
  }

  .footer-credit a {
    color: var(--text-muted);
    text-decoration: none;
  }

  .footer-credit a:hover {
    color: var(--brand);
  }

  /* ========== Responsive ========== */
  @media (max-width: 1024px) {
    .footer-main {
      padding: 3rem 2rem;
    }

    .footer-grid {
      grid-template-columns: 1.5fr 1fr 1fr;
      gap: 2.5rem;
    }

    .footer-brand-col {
      grid-column: 1;
      grid-row: 1 / 3;
    }
  }

  @media (max-width: 768px) {
    .footer-main {
      padding: 2.5rem 1.5rem;
    }

    .footer-grid {
      grid-template-columns: 1fr 1fr;
      gap: 2rem;
    }

    .footer-brand-col {
      grid-column: 1 / -1;
      grid-row: auto;
      align-items: center;
      text-align: center;
      padding-bottom: 2rem;
      border-bottom: 1px solid var(--border);
      margin-bottom: 0.5rem;
    }

    .footer-tagline {
      max-width: 360px;
    }

    .footer-contact-info {
      align-items: center;
    }

    .footer-social {
      justify-content: center;
    }

    .footer-address {
      flex-direction: row;
      gap: 2rem;
    }

    .footer-bottom-inner {
      flex-direction: column;
      gap: 0.75rem;
      text-align: center;
      padding: 1rem 1.5rem;
    }

    .footer-legal-links {
      gap: 0.75rem;
    }

    .footer-bottom-right {
      flex-wrap: wrap;
      justify-content: center;
      gap: 0.75rem;
    }
  }

  @media (max-width: 480px) {
    .footer-grid {
      grid-template-columns: 1fr;
      gap: 1.75rem;
    }

    .footer-col {
      text-align: center;
    }

    .footer-col .footer-heading {
      margin-bottom: 1rem;
    }

    .footer-nav {
      align-items: center;
    }

    .footer-address {
      flex-direction: column;
      align-items: center;
      gap: 1.25rem;
    }

    .footer-address-block {
      text-align: center;
    }

    .footer-directions-link {
      justify-content: center;
    }
  }

  /* Hidden utility */
  .hidden {
    display: none !important;
  }
</style>

<script>
  async function checkPrivacyRegionFallback() {
    const privacyLink = document.getElementById('privacy-choices-link');
    if (!privacyLink) return;
    
    if (!privacyLink.classList.contains('hidden')) return;

    try {
      const controller = new AbortController();
      const timeoutId = setTimeout(() => controller.abort(), 1500); 
      
      const response = await fetch('https://geo.locc.us/where', { signal: controller.signal });
      clearTimeout(timeoutId);
      
      if (response.ok) {
        const data = await response.json();
        const privacyFlags = ['gdpr', 'ccpa', 'cpa', 'lgpd', 'pipeda', 'appa'];
        const isInPrivacyRegion = privacyFlags.some(flag => data[flag]);

        if (isInPrivacyRegion) {
          privacyLink.classList.remove('hidden');
        }
      }
    } catch (e) {
      if (privacyLink.classList.contains('hidden')) {
        privacyLink.classList.remove('hidden');
      }
    }
  }

  document.addEventListener('DOMContentLoaded', checkPrivacyRegionFallback);
</script>
