---
import Layout from './Layout.astro';

interface Props {
  title: string;
  lastUpdated: string;
  effectiveDate?: string;
}

const { title, lastUpdated, effectiveDate } = Astro.props;
---

<Layout title={title}>
  <section class="py-16 bg-gray-50 border-b border-gray-200">
    <div class="container mx-auto px-6">
      <div class="max-w-3xl mx-auto">
        <p class="text-xs font-semibold text-gray-500 uppercase tracking-wider mb-3">Legal</p>
        <h1 class="text-3xl font-semibold text-gray-900 mb-2">{title}</h1>
        <div class="flex flex-wrap gap-x-4 gap-y-1 text-sm text-gray-500">
          <span>Last Updated: {lastUpdated}</span>
          {effectiveDate && <span>Effective: {effectiveDate}</span>}
        </div>
      </div>
    </div>
  </section>

  <section class="py-12 bg-white">
    <div class="container mx-auto px-6">
      <div class="max-w-3xl mx-auto">
        <div class="legal-content">
          <slot />
        </div>

        <div class="mt-12 pt-8 border-t border-gray-200">
          <div class="flex flex-wrap gap-4 text-sm">
            <a href="/legal/privacy" class="text-gray-600 hover:text-brand">Privacy Policy</a>
            <a href="/legal/terms" class="text-gray-600 hover:text-brand">Terms of Service</a>
            <a href="/legal/refunds" class="text-gray-600 hover:text-brand">Refund Policy</a>
            <a href="/" class="text-gray-600 hover:text-brand">Return to Home</a>
          </div>
          <p class="mt-4 text-xs text-gray-400">
            Â© {new Date().getFullYear()} Lake Ozark Christian Church Inc. All rights reserved.
          </p>
        </div>
      </div>
    </div>
  </section>
</Layout>

<style is:global>
  .legal-content h2 {
    font-size: 1.125rem;
    font-weight: 600;
    color: #111827;
    margin-top: 2rem;
    margin-bottom: 0.75rem;
    text-transform: uppercase;
    letter-spacing: 0.025em;
  }
  
  .legal-content h3 {
    font-size: 1rem;
    font-weight: 600;
    color: #374151;
    margin-top: 1.5rem;
    margin-bottom: 0.5rem;
  }
  
  .legal-content p {
    color: #4b5563;
    margin-bottom: 1rem;
    line-height: 1.7;
    font-size: 0.9375rem;
  }
  
  .legal-content ul, .legal-content ol {
    color: #4b5563;
    margin-bottom: 1rem;
    padding-left: 1.5rem;
    font-size: 0.9375rem;
  }
  
  .legal-content ul {
    list-style-type: disc;
  }
  
  .legal-content ol {
    list-style-type: decimal;
  }
  
  .legal-content li {
    margin-bottom: 0.5rem;
    line-height: 1.6;
  }
  
  .legal-content a {
    color: #8B5A2B;
    text-decoration: underline;
    text-underline-offset: 2px;
  }
  
  .legal-content a:hover {
    color: #6B4423;
  }
  
  .legal-content strong {
    font-weight: 600;
    color: #374151;
  }
  
  .legal-content .notice-box {
    background-color: #f9fafb;
    border: 1px solid #e5e7eb;
    border-left: 4px solid #8B5A2B;
    padding: 1rem 1.25rem;
    margin: 1.5rem 0;
    font-size: 0.875rem;
  }
  
  .legal-content .contact-box {
    background-color: #f9fafb;
    border: 1px solid #e5e7eb;
    padding: 1rem 1.25rem;
    margin: 1.5rem 0;
  }
</style>

