<script>
  // Show privacy choices button for users in privacy law regions
  async function checkPrivacyRegion() {
    try {
      const controller = new AbortController();
      setTimeout(() => controller.abort(), 5000);
      
      const response = await fetch('https://geo.locc.us/where', { signal: controller.signal });
      const data = await response.json();
      
      if (data.gdpr || data.ccpa || data.cpa || data.lgpd || data.pipeda || data.appa) {
        const privacyLink = document.getElementById('privacy-choices-link');
        if (privacyLink) privacyLink.classList.remove('hidden');
      }
    } catch {
      // Show by default if check fails
      const privacyLink = document.getElementById('privacy-choices-link');
      if (privacyLink) privacyLink.classList.remove('hidden');
    }
  }

  document.addEventListener('DOMContentLoaded', checkPrivacyRegion);
</script>
