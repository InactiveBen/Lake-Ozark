<script>
  // Show privacy choices button only for users in GDPR/CCPA regions
  async function checkPrivacyRegion() {
    try {
      const response = await fetch('https://geo.locc.us/where');
      const data = await response.json();
      
      // Show privacy button if user is in a region with privacy laws
      const requiresConsent = data.gdpr || data.ccpa || data.cpa || data.lgpd || data.pipeda || data.appa;
      
      if (requiresConsent) {
        console.log('[FOOTER_PRIVACY] Privacy laws detected, showing privacy choices link');
        const privacyLink = document.getElementById('privacy-choices-link');
        if (privacyLink) {
          privacyLink.classList.remove('hidden');
        }
      } else {
        console.log('[FOOTER_PRIVACY] No privacy laws detected for this region, hiding privacy choices link');
      }
    } catch (error) {
      console.warn('[FOOTER_PRIVACY] Could not determine user location, hiding privacy choices link:', error);
      // Default to hidden if we can't determine location
    }
  }

  // Check privacy region on page load
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', checkPrivacyRegion);
  } else {
    checkPrivacyRegion();
  }
</script>


