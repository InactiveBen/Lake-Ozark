---
interface Props {
  name: string;
  logo?: string;
  url?: string | null;
}

const { name, logo, url } = Astro.props;
---

{url ? (
  <a 
    href={url}
    target="_blank"
    rel="noopener noreferrer"
    class="block bg-white p-6 rounded-xl shadow-md hover:shadow-lg transition-shadow duration-300"
  >
    {logo ? (
      <div class="flex items-center justify-center h-24">
        <img 
          src={logo} 
          alt={`${name} logo`} 
          class="max-h-16 max-w-[180px] object-contain"
          loading="lazy"
        />
      </div>
    ) : (
      <div class="flex items-center justify-center h-24 bg-gradient-to-br from-brand/5 to-brand/10 rounded-lg">
        <span class="text-xl font-semibold text-gray-700 text-center px-4">{name}</span>
      </div>
    )}
  </a>
) : (
  <div class="bg-white p-6 rounded-xl shadow-md hover:shadow-lg transition-shadow duration-300">
    {logo ? (
      <div class="flex items-center justify-center h-24">
        <img 
          src={logo} 
          alt={`${name} logo`} 
          class="max-h-16 max-w-[180px] object-contain"
          loading="lazy"
        />
      </div>
    ) : (
      <div class="flex items-center justify-center h-24 bg-gradient-to-br from-brand/5 to-brand/10 rounded-lg">
        <span class="text-xl font-semibold text-gray-700 text-center px-4">{name}</span>
      </div>
    )}
  </div>
)}
