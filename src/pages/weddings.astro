---
import Layout from '../layouts/Layout.astro';

const heroImage = {
  url: "http://cdn.lakeozarkdisciples.org/media/69CA977C-2462-4E2A-B067-A2FCD5D87A3F.jpeg",
  alt: "Church Sanctuary"
};

const features = [
  {
    title: "Beautiful Sanctuary",
    description: "Our traditional sanctuary provides a stunning backdrop for your special day.",
    icon: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />`
  },
  {
    title: "Seating Capacity",
    description: "Comfortable seating for up to 400 guests in our main sanctuary.",
    icon: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />`
  },
  {
    title: "Wedding Coordinator",
    description: "Professional assistance to help plan and coordinate your ceremony.",
    icon: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-6 9l2 2 4-4" />`
  },
  {
    title: "Preparation Areas",
    description: "Dedicated rooms for the wedding party to prepare and gather.",
    icon: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />`
  }
];
---

<Layout title="Weddings">
  <!-- Hero Section - Clean and Minimalist -->
  <section class="relative overflow-hidden bg-white">
    <div class="absolute inset-0">
      <img 
        src={heroImage.url} 
        alt={heroImage.alt}
        class="w-full h-full object-cover"
      />
      <div class="absolute inset-0 bg-black/40"></div>
    </div>

    <div class="relative container mx-auto px-6 py-32 md:py-40">
      <div class="max-w-4xl">
        <h1 class="text-5xl md:text-7xl font-semibold text-white mb-8 leading-tight tracking-tight">
          Weddings
        </h1>
        <p class="text-lg md:text-xl text-white/80 mb-12 max-w-2xl font-light leading-relaxed">
          Begin your journey together in our beautiful sanctuary. Let us help make your special day memorable.
        </p>
        
        <div class="flex flex-col sm:flex-row gap-4">
          <a 
            href="tel:573-365-3366" 
            class="inline-flex items-center justify-center px-8 py-4 bg-brand hover:bg-brand-dark text-white font-medium rounded-lg transition-all duration-300 text-lg"
          >
            Call Us
          </a>
          <a 
            href="#venue-features" 
            class="inline-flex items-center justify-center px-8 py-4 bg-transparent border-2 border-white text-white hover:bg-white hover:text-gray-900 font-medium rounded-lg transition-all duration-300 text-lg"
          >
            Learn More
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Introduction -->
  <section class="py-20 bg-white">
    <div class="container mx-auto px-6">
      <div class="max-w-4xl mx-auto text-center">
        <span class="inline-block px-4 py-2 bg-brand/10 text-brand text-sm font-medium mb-6">
          Wedding Venue
        </span>
        <h2 class="text-4xl lg:text-5xl font-light mb-8 text-gray-900 leading-tight">
          A Sacred Place for Your Special Day
        </h2>
        <p class="text-lg text-gray-600 leading-relaxed">
          Our beautiful sanctuary provides the perfect setting for your wedding ceremony. 
          With its stunning architecture and peaceful atmosphere, Lake Ozark Christian Church 
          offers a meaningful place to begin your journey together.
        </p>
      </div>
    </div>
  </section>

  <!-- Venue Features -->
  <section id="venue-features" class="py-20 bg-gray-50">
    <div class="container mx-auto px-6">
      <div class="max-w-7xl mx-auto">
        <div class="text-center mb-16">
          <span class="inline-block px-4 py-2 bg-brand/10 text-brand text-sm font-medium mb-4">
            Venue Features
          </span>
          <h2 class="text-4xl lg:text-5xl font-light mb-6 text-gray-900">What We Offer</h2>
          <p class="text-lg text-gray-600 max-w-2xl mx-auto">
            Everything you need for a beautiful and memorable wedding ceremony
          </p>
        </div>
        
        <div class="grid md:grid-cols-2 gap-8">
          {features.map(feature => (
            <div class="bg-white p-8 rounded-2xl border border-gray-200 hover:shadow-lg transition-all duration-300">
              <div class="flex items-start gap-6">
                <div class="w-16 h-16 bg-brand/10 rounded-full flex items-center justify-center flex-shrink-0">
                  <svg class="w-8 h-8 text-brand" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <Fragment set:html={feature.icon} />
                  </svg>
                </div>
                <div>
                  <h3 class="text-2xl font-semibold mb-4 text-gray-900">{feature.title}</h3>
                  <p class="text-lg text-gray-600 leading-relaxed">{feature.description}</p>
                </div>
              </div>
            </div>
          ))}
        </div>
      </div>
    </div>
  </section>

  <!-- Contact Section -->
  <section class="py-20 bg-white">
    <div class="container mx-auto px-6">
      <div class="max-w-4xl mx-auto text-center">
        <span class="inline-block px-4 py-2 bg-brand/10 text-brand text-sm font-medium mb-6">
          Get Started
        </span>
        <h2 class="text-4xl lg:text-5xl font-light mb-8 text-gray-900 leading-tight">
          Schedule Your Wedding
        </h2>
        <p class="text-lg text-gray-600 mb-12 leading-relaxed">
          To learn more about having your wedding at Lake Ozark Christian Church or to check available dates, 
          please contact our church office.
        </p>
        
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a 
            href="tel:573-365-3366" 
            class="inline-flex items-center justify-center gap-3 bg-brand text-white px-8 py-4 rounded-lg hover:bg-brand-dark transition-all duration-300 font-medium text-lg"
          >
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
            </svg>
            Call: 573-365-3366
          </a>
          <a 
            href="mailto:office@lakeozarkdisciples.org" 
            class="inline-flex items-center justify-center gap-3 bg-gray-900 text-white px-8 py-4 rounded-lg hover:bg-gray-800 transition-all duration-300 font-medium text-lg"
          >
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
            </svg>
            Send Email
          </a>
        </div>
      </div>
    </div>
  </section>

  <style>
    * {
      font-family: 'Albert Sans', system-ui, sans-serif;
    }
    
    h1, h2, h3, h4, h5, h6 {
      font-family: 'Albert Sans', system-ui, sans-serif;
    }
  </style>
</Layout>
