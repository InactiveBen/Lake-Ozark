---
import Layout from '../layouts/Layout.astro';
import '../pages/weddings.css';

const heroImage = {
  url: "http://cdn.lakeozarkdisciples.org/media/69CA977C-2462-4E2A-B067-A2FCD5D87A3F.jpeg",
  alt: "Beautiful Church Sanctuary for Weddings"
};

const galleryImages = [
  {
    url: "http://cdn.lakeozarkdisciples.org/media/69CA977C-2462-4E2A-B067-A2FCD5D87A3F.jpeg",
    alt: "Main Sanctuary View"
  },
  {
    url: "http://cdn.lakeozarkdisciples.org/media/7767E813-185B-48B7-A7C8-A5C919258FEA.jpeg",
    alt: "Altar and Choir Area"
  },
  {
    url: "http://cdn.lakeozarkdisciples.org/media/8F240771-48E1-4868-9BC6-6AB8256F433F.jpeg",
    alt: "Church Interior"
  }
];

const features = [
  {
    title: "Beautiful Sanctuary",
    description: "Our traditional sanctuary provides a stunning backdrop for your special day with elegant architecture and natural lighting.",
    icon: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />`
  },
  {
    title: "Seating for 400+",
    description: "Comfortable seating for up to 400 guests in our main sanctuary with excellent acoustics and sight lines.",
    icon: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />`
  },
  {
    title: "Wedding Coordinator",
    description: "Professional assistance to help plan and coordinate your ceremony, ensuring everything runs smoothly.",
    icon: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-6 9l2 2 4-4" />`
  },
  {
    title: "Preparation Areas",
    description: "Dedicated rooms for the wedding party to prepare and gather in comfort and privacy.",
    icon: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />`
  },
  {
    title: "Parking & Accessibility",
    description: "Ample parking available with full accessibility features for all your guests.",
    icon: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7v8a2 2 0 002 2h6M8 7V5a2 2 0 012-2h4.586a1 1 0 01.707.293l4.414 4.414a1 1 0 01.293.707V15a2 2 0 01-2 2h-2M8 7H6a2 2 0 00-2 2v10a2 2 0 002 2h8a2 2 0 002-2v-2" />`
  },
  {
    title: "Sound System",
    description: "Professional sound system and microphones to ensure your vows are heard by all.",
    icon: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.536 8.464a5 5 0 010 7.072m2.828-9.9a9 9 0 010 12.728M5.586 15H4a1 1 0 01-1-1v-4a1 1 0 011-1h1.586l4.707-4.707C10.923 3.663 12 4.109 12 5v14c0 .891-1.077 1.337-1.707.707L5.586 15z" />`
  },
  {
    title: "Indoor & Outdoor Options",
    description: "The only religious venue with both indoor sanctuary and outdoor ceremony options - weather-proof your special day!",
    icon: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 15a4 4 0 004 4h9a5 5 0 10-.1-9.999 5.002 5.002 0 10-9.78 2.096A4.001 4.001 0 003 15z" />`
  }
];

// Toggle for packages section - set to false to hide packages
const showPackages = true;

const packages = [
  {
    name: "Ceremony Only",
    price: "N/A",
    duration: "N/A",
    includes: [
      "Sanctuary rental",
      "Wedding coordinator",
      "Sound system",
      "Preparation rooms",
      "Parking"
    ]
  },
  {
    name: "N/A",
    price: "N/A",
    duration: "N/A",
    includes: [
      "Everything in Ceremony Only",
      "Fellowship hall rental",
      "Kitchen access",
      "Tables and chairs",
      "Cleanup service"
    ],
    popular: true
  },
  {
    name: "N/A",
    price: "N/A",
    duration: "N/A",
    includes: [
      "Everything in Ceremony Only",
      "Extended setup time",
      "Rehearsal day access",
      "Additional coordinator hours",
      "Priority booking"
    ]
  }
];

const testimonials = [
  {
    quote: "Our wedding at Lake Ozark Christian Church was absolutely perfect. The sanctuary was beautiful and the staff made everything so easy for us.",
    author: "Sarah & Michael",
    date: "June 2023"
  },
  {
    quote: "The wedding coordinator was amazing and helped us plan every detail. Our guests were impressed with the beautiful setting.",
    author: "Emily & David",
    date: "September 2023"
  },
  {
    quote: "We couldn't have asked for a more perfect place to start our life together. The church felt like home from the moment we walked in.",
    author: "Jessica & Ryan",
    date: "May 2023"
  }
];
---

<Layout title="Weddings">
  <!-- Hero Section - Clean and Minimalist -->
  <section class="relative overflow-hidden bg-white">
    <div class="absolute inset-0">
      <img 
        src={heroImage.url} 
        alt={heroImage.alt}
        class="w-full h-full object-cover"
      />
      <div class="absolute inset-0 bg-black/50"></div>
    </div>

    <div class="relative container mx-auto px-6 py-32 md:py-40">
      <div class="max-w-4xl">
        <p class="text-xl md:text-2xl text-white/90 mb-4 font-light leading-relaxed">
          A Sacred Place for Your Special Day
        </p>        
  <h1 class="text-5xl md:text-7xl font-semibold text-white mb-8 leading-tight tracking-tight">
    Your perfect day starts here.
  </h1>
        <p class="text-lg md:text-xl text-white/80 mb-12 max-w-2xl font-light leading-relaxed">
          Begin your journey together in our beautiful sanctuary. A sacred space where love stories begin and memories are made forever.
        </p>
        
        <div class="flex flex-col sm:flex-row gap-4">
          {showPackages && (
            <a 
              href="#packages" 
              class="inline-flex items-center justify-center px-8 py-4 bg-brand hover:bg-brand-dark text-white font-medium rounded-lg transition-all duration-300 text-lg"
            >
              View Packages
            </a>
          )}
          <a 
            href="tel:573-365-3366" 
            class="inline-flex items-center justify-center px-8 py-4 bg-transparent border-2 border-white text-white hover:bg-white hover:text-gray-900 font-medium rounded-lg transition-all duration-300 text-lg"
          >
            Call Us Today
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Gallery Section -->
  <section class="py-20 bg-white">
    <div class="container mx-auto px-6">
      <div class="max-w-7xl mx-auto">
        <div class="text-center mb-16">
          <span class="inline-block px-4 py-2 bg-brand/10 text-brand text-sm font-medium mb-4">
            Our Venue
          </span>
          <h2 class="text-4xl lg:text-5xl font-light mb-6 text-gray-900">Beautiful Spaces</h2>
          <p class="text-lg text-gray-600 max-w-2xl mx-auto">
            Take a look at our stunning sanctuary and facilities that will make your wedding day unforgettable
          </p>
        </div>
        
        <div class="grid md:grid-cols-3 gap-8">
          {galleryImages.map((image, index) => (
            <div class="group">
              <div class="relative overflow-hidden rounded-2xl aspect-[4/3]">
                <img 
                  src={image.url} 
                  alt={image.alt}
                  class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-500"
                />
                <div class="absolute inset-0 bg-black/0 group-hover:bg-black/20 transition-all duration-300"></div>
              </div>
            </div>
          ))}
        </div>
      </div>
    </div>
  </section>

  <!-- Introduction -->
  <section class="relative overflow-hidden bg-white">
    <div class="relative container mx-auto px-6 py-20">
      <div class="max-w-6xl mx-auto">
        <div class="grid lg:grid-cols-2 gap-16 items-center">
          <div>
            <span class="inline-block px-4 py-2 bg-brand/10 text-brand text-sm font-medium mb-6">
              Wedding Venue
            </span>
            <h2 class="text-4xl lg:text-5xl font-light mb-8 text-gray-900 leading-tight">
              A Sacred Place for Your Special Day
            </h2>
            <p class="text-lg text-gray-600 leading-relaxed mb-8">
              Our beautiful sanctuary provides the perfect setting for your wedding ceremony. 
              With its stunning architecture and peaceful atmosphere, Lake Ozark Christian Church 
              offers a meaningful place to begin your journey together.
            </p>
            <div class="space-y-4">
              <div class="flex items-center gap-4">
                <div class="w-12 h-12 bg-brand/10 rounded-full flex items-center justify-center">
                  <svg class="w-6 h-6 text-brand" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z" />
                  </svg>
                </div>
                <div>
                  <h3 class="font-semibold text-gray-900">Sacred & Meaningful</h3>
                  <p class="text-gray-600">A place where love stories begin with spiritual significance</p>
                </div>
              </div>
              <div class="flex items-center gap-4">
                <div class="w-12 h-12 bg-brand/10 rounded-full flex items-center justify-center">
                  <svg class="w-6 h-6 text-brand" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 15a4 4 0 004 4h9a5 5 0 10-.1-9.999 5.002 5.002 0 10-9.78 2.096A4.001 4.001 0 003 15z" />
                  </svg>
                </div>
                <div>
                  <h3 class="font-semibold text-gray-900">Weather-Proof Your Special Day</h3>
                  <p class="text-gray-600">The only religious venue with both indoor and outdoor options</p>
                </div>
              </div>
              <div class="flex items-center gap-4">
                <div class="w-12 h-12 bg-brand/10 rounded-full flex items-center justify-center">
                  <svg class="w-6 h-6 text-brand" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
                  </svg>
                </div>
                <div>
                  <h3 class="font-semibold text-gray-900">Beautiful Architecture</h3>
                  <p class="text-gray-600">Stunning traditional design with modern amenities</p>
                </div>
              </div>
              <div class="flex items-center gap-4">
                <div class="w-12 h-12 bg-brand/10 rounded-full flex items-center justify-center">
                  <svg class="w-6 h-6 text-brand" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                  </svg>
                </div>
                <div>
                  <h3 class="font-semibold text-gray-900">Peaceful Atmosphere</h3>
                  <p class="text-gray-600">A serene environment perfect for your special moment</p>
                </div>
              </div>
            </div>
          </div>
          <div class="relative">
            <div class="relative rounded-2xl overflow-hidden shadow-2xl">
              <img 
                src="http://cdn.lakeozarkdisciples.org/media/7767E813-185B-48B7-A7C8-A5C919258FEA.jpeg"
                alt="Beautiful church sanctuary interior"
                class="w-full h-[500px] object-cover"
              />
              <div class="absolute inset-0 bg-gradient-to-t from-black/20 to-transparent"></div>
            </div>
            <div class="absolute -bottom-6 -right-6 w-24 h-24 bg-brand/10 rounded-full flex items-center justify-center">
              <svg class="w-12 h-12 text-brand" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z" />
              </svg>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Venue Features -->
  <section id="venue-features" class="relative overflow-hidden bg-white">
    <div class="relative container mx-auto px-6 py-20">
      <div class="max-w-7xl mx-auto">
        <div class="text-center mb-16">
          <span class="inline-block px-4 py-2 bg-brand/10 text-brand text-sm font-medium mb-4">
            Venue Features
          </span>
          <h2 class="text-4xl lg:text-5xl font-light mb-6 text-gray-900">What We Offer</h2>
          <p class="text-lg text-gray-600 max-w-2xl mx-auto">
            Everything you need for a beautiful and memorable wedding ceremony
          </p>
        </div>
        
        <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-8">
          {features.map(feature => (
            <div class="bg-white p-6 rounded-2xl border border-gray-200 hover:shadow-xl transition-all duration-300 group relative overflow-hidden">
              <div class="absolute inset-0 bg-gradient-to-br from-brand/5 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
              <div class="relative">
                <div class="w-14 h-14 bg-brand/10 rounded-full flex items-center justify-center mx-auto mb-4 group-hover:bg-brand/20 transition-all duration-300">
                  <svg class="w-7 h-7 text-brand" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <Fragment set:html={feature.icon} />
                  </svg>
                </div>
                <h3 class="text-lg font-semibold mb-3 text-gray-900 text-center">{feature.title}</h3>
                <p class="text-gray-600 leading-relaxed text-sm text-center">{feature.description}</p>
              </div>
            </div>
          ))}
        </div>
  </section>

  <!-- Packages Section -->
  {showPackages && (
    <section id="packages" class="py-20 bg-white">
      <div class="container mx-auto px-6">
        <div class="max-w-7xl mx-auto">
          <div class="text-center mb-16">
            <span class="inline-block px-4 py-2 bg-brand/10 text-brand text-sm font-medium mb-4">
              Wedding Packages
            </span>
            <h2 class="text-4xl lg:text-5xl font-light mb-6 text-gray-900">Choose Your Perfect Package</h2>
            <p class="text-lg text-gray-600 max-w-2xl mx-auto">
              Flexible options to fit your needs and budget for your special day
            </p>
          </div>
          
          <div class="grid md:grid-cols-3 gap-8">
            {packages.map((pkg, index) => (
              <div class={`relative bg-white p-8 rounded-2xl border-2 transition-all duration-300 hover:shadow-xl ${pkg.popular ? 'border-brand shadow-lg' : 'border-gray-200 hover:border-brand/50'}`}>
                {pkg.popular && (
                  <div class="absolute -top-4 left-1/2 transform -translate-x-1/2">
                    <span class="bg-brand text-white px-4 py-2 rounded-full text-sm font-medium">
                      Most Popular
                    </span>
                  </div>
                )}
                
                <div class="text-center mb-8">
                  <h3 class="text-2xl font-semibold mb-2 text-gray-900">{pkg.name}</h3>
                  <div class="text-4xl font-bold text-brand mb-2">{pkg.price}</div>
                  <div class="text-gray-600">{pkg.duration}</div>
                </div>
                
                <ul class="space-y-4 mb-8">
                  {pkg.includes.map((item, itemIndex) => (
                    <li class="flex items-center gap-3">
                      <svg class="w-5 h-5 text-brand flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                      </svg>
                      <span class="text-gray-600">{item}</span>
                    </li>
                  ))}
                </ul>
                
                <a 
                  href="tel:573-365-3366" 
                  class={`block w-full text-center py-3 px-6 rounded-lg font-medium transition-all duration-300 ${
                    pkg.popular 
                      ? 'bg-brand hover:bg-brand-dark text-white' 
                      : 'bg-gray-900 hover:bg-gray-800 text-white'
                  }`}
                >
                  Book This Package
                </a>
              </div>
            ))}
          </div>
        </div>
      </div>
    </section>
  )}

  <!-- Testimonials Section -->
  <section class="py-20 bg-white">
    <div class="container mx-auto px-6">
      <div class="max-w-7xl mx-auto">
        <div class="text-center mb-16">
          <span class="inline-block px-4 py-2 bg-brand/10 text-brand text-sm font-medium mb-4">
            Happy Couples
          </span>
          <h2 class="text-4xl lg:text-5xl font-light mb-6 text-gray-900">What Our Couples Say</h2>
          <p class="text-lg text-gray-600 max-w-2xl mx-auto">
            Hear from couples who chose Lake Ozark Christian Church for their special day
          </p>
        </div>
        
        <div class="grid md:grid-cols-3 gap-8">
          {testimonials.map((testimonial, index) => (
            <div class="bg-gray-50 p-8 rounded-2xl">
              <div class="mb-6">
                <svg class="w-8 h-8 text-brand mb-4" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M14.017 21v-7.391c0-5.704 3.731-9.57 8.983-10.609l.995 2.151c-2.432.917-3.995 3.638-3.995 5.849h4v10h-9.983zm-14.017 0v-7.391c0-5.704 3.748-9.57 9-10.609l.996 2.151c-2.433.917-3.996 3.638-3.996 5.849h4v10h-10z"/>
                </svg>
                <p class="text-gray-700 leading-relaxed italic">"{testimonial.quote}"</p>
              </div>
              <div class="border-t border-gray-200 pt-4">
                <div class="font-semibold text-gray-900">{testimonial.author}</div>
                <div class="text-sm text-gray-600">{testimonial.date}</div>
              </div>
            </div>
          ))}
        </div>
      </div>
    </div>
  </section>

  <!-- Contact Section -->
  <section class="relative overflow-hidden bg-white">
    <div class="relative container mx-auto px-6 py-20">
      <div class="max-w-6xl mx-auto">
        <div class="text-center mb-16">
          <span class="inline-block px-4 py-2 bg-brand/10 text-brand text-sm font-medium mb-6">
            Get Started
          </span>
          <h2 class="text-4xl lg:text-5xl font-light mb-8 text-gray-900 leading-tight">
            Ready to Plan Your Wedding?
          </h2>
          <p class="text-lg text-gray-600 max-w-3xl mx-auto leading-relaxed">
            Contact us today to discuss your wedding plans, check available dates, and learn more about our beautiful venue. We're here to help make your special day perfect.
          </p>
        </div>
        
        <div class="grid lg:grid-cols-3 gap-8 mb-16">
          <div class="bg-white p-8 rounded-2xl shadow-lg border border-gray-100 hover:shadow-xl transition-all duration-300 group">
            <div class="text-center">
              <div class="w-16 h-16 bg-brand/10 rounded-full flex items-center justify-center mx-auto mb-6 group-hover:bg-brand/20 transition-all duration-300">
                <svg class="w-8 h-8 text-brand" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                </svg>
              </div>
              <h3 class="text-xl font-semibold mb-4 text-gray-900">Call Us</h3>
              <p class="text-gray-600 mb-6">Speak directly with our wedding coordinator</p>
              <a 
                href="tel:573-365-3366" 
                class="inline-flex items-center justify-center w-full py-3 px-6 bg-brand hover:bg-brand-dark text-white font-medium rounded-lg transition-all duration-300"
              >
                <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                </svg>
                573-365-3366
              </a>
            </div>
          </div>
          
          <div class="bg-white p-8 rounded-2xl shadow-lg border border-gray-100 hover:shadow-xl transition-all duration-300 group">
            <div class="text-center">
              <div class="w-16 h-16 bg-brand/10 rounded-full flex items-center justify-center mx-auto mb-6 group-hover:bg-brand/20 transition-all duration-300">
                <svg class="w-8 h-8 text-brand" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                </svg>
              </div>
              <h3 class="text-xl font-semibold mb-4 text-gray-900">Email Us</h3>
              <p class="text-gray-600 mb-6">Send us your questions and details</p>
              <a 
                href="mailto:office@lakeozarkdisciples.org" 
                class="inline-flex items-center justify-center w-full py-3 px-6 bg-gray-900 hover:bg-gray-800 text-white font-medium rounded-lg transition-all duration-300"
