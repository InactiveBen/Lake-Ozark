---
import Layout from '../layouts/Layout.astro';
import Slideshow from '../components/Slideshow.astro';

const heroImages = [
  {
    url: "https://www.tiptopwebsite.com/photos3/bestqualityaudioproductions/loccsanct.jpg",
    alt: "Church Sanctuary"
  },
  {
    url: "https://i.ytimg.com/vi/P3dRp1zPrxc/hq720.jpg",
    alt: "Church Interior"
  }
];

const whatToExpect = [
  {
    title: "Welcoming Atmosphere",
    description: "Experience a warm, inclusive environment where everyone is welcome.",
    icon: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z" />`
  },
  {
    title: "Music Ministry",
    description: "Enjoy contemporary and traditional music that lifts our spirits in worship.",
    icon: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19V6l12-3v13M9 19c0 1.105-1.343 2-3 2s-3-.895-3-2 1.343-2 3-2 3 .895 3 2zm12-3c0 1.105-1.343 2-3 2s-3-.895-3-2 1.343-2 3-2 3 .895 3 2zM9 10l12-3" />`
  },
  {
    title: "Engaging Message",
    description: "Listen to inspiring messages that connect scripture with daily life.",
    icon: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />`
  },
  {
    title: "Family-Friendly",
    description: "Children's programs and nursery care available during service.",
    icon: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />`
  }
];
---

<Layout title="Worship With Us">
  <!-- Hero Section -->
  <div class="relative">
    <div class="absolute inset-0">
      <Slideshow images={heroImages} />
      <div class="absolute inset-0 bg-black/50"></div>
    </div>

    <div class="relative min-h-[60vh] flex items-center">
      <div class="container mx-auto px-4 py-16 text-center text-white">
        <h1 class="text-5xl md:text-6xl font-bold mb-4">Worship With Us</h1>
        <p class="text-xl md:text-2xl mb-8 max-w-3xl mx-auto">
          Join us in worship as we celebrate God's love and grace together.
          All are welcome at Christ's table.
        </p>
        
        <div class="flex flex-wrap justify-center gap-4">
          <a 
            href="https://www.youtube.com/channel/UCUcLKfZo5Su6-ypmt1dkPKA"
            target="_blank"
            class="bg-brand hover:bg-brand-dark text-white px-8 py-3 rounded-full transition transform hover:scale-105"
          >
            Watch Online
          </a>
          <a 
            href="#service-times" 
            class="bg-white hover:bg-gray-100 text-gray-900 px-8 py-3 rounded-full transition transform hover:scale-105"
          >
            Service Times
          </a>
        </div>
      </div>
    </div>
  </div>

  <!-- Service Times -->
  <div id="service-times" class="container mx-auto px-4 py-16">
    <div class="bg-white p-8 rounded-2xl shadow-lg max-w-4xl mx-auto">
      <h2 class="text-3xl font-bold mb-8 text-center">Sunday Worship</h2>
      <div class="grid md:grid-cols-2 gap-8">
        <div class="bg-gray-50 p-6 rounded-xl">
          <h3 class="text-xl font-bold mb-4">Service Time</h3>
          <p class="text-gray-600">Sundays at 10:30 AM</p>
          <p class="mt-2 text-gray-500">Join us early for fellowship</p>
        </div>
        <div class="bg-gray-50 p-6 rounded-xl">
          <h3 class="text-xl font-bold mb-4">Location</h3>
          <address class="not-italic text-gray-600">
            1560 Bagnell Dam Blvd.<br>
            Lake Ozark, MO 65049
          </address>
        </div>
      </div>
    </div>
  </div>

  <!-- What to Expect -->
  <div class="container mx-auto px-4 py-16">
    <h2 class="text-3xl font-bold mb-12 text-center">What to Expect</h2>
    <div class="grid md:grid-cols-2 gap-8 max-w-6xl mx-auto">
      {whatToExpect.map(item => (
        <div class="bg-white p-8 rounded-2xl shadow-lg">
          <div class="flex items-start gap-6">
            <div class="p-3 bg-brand/10 rounded-xl text-brand">
              <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <Fragment set:html={item.icon} />
              </svg>
            </div>
            <div>
              <h3 class="text-2xl font-bold mb-4">{item.title}</h3>
              <p class="text-gray-600">{item.description}</p>
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>

  <!-- Online Worship -->
  <div class="container mx-auto px-4 py-16">
    <div class="bg-white p-8 rounded-2xl shadow-lg max-w-4xl mx-auto">
      <h2 class="text-3xl font-bold mb-8 text-center">Watch Online</h2>
      <p class="text-xl text-gray-600 text-center mb-8">
        Can't join us in person? Watch our services live on YouTube every Sunday at 10:30 AM.
      </p>
      <div class="flex justify-center">
        <a 
          href="https://www.youtube.com/channel/UCUcLKfZo5Su6-ypmt1dkPKA"
          target="_blank"
          class="inline-flex items-center gap-2 bg-brand text-white px-8 py-3 rounded-full hover:bg-brand-dark transition"
        >
          <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
            <path d="M23.498 6.186a3.016 3.016 0 0 0-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 0 0 .502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 0 0 2.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.377-.505a3.015 3.015 0 0 0 2.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814z"/>
