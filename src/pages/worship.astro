---
import Layout from '../layouts/Layout.astro';
import LocationMap from '../components/LocationMap.astro';
import SundayCalendar from '../components/SundayCalendar.astro';

import { isLocalVisitor } from '../utils/locationCheck';

const isLocal = await isLocalVisitor();

const heroImage = {
  url: "https://usercontent.donorkit.io/clients/LOCC/69CA977C-2462-4E2A-B067-A2FCD5D87A3F.jpeg",
  alt: "Interior view of Lake Ozark Christian Church sanctuary"
};
---

<Layout title="Worship With Us">
<!-- Preload hero image for faster LCP -->
<link rel="preload" href={heroImage.url} as="image" fetchpriority="high" />

  <!-- Hero Section -->
  <section class="relative overflow-hidden bg-white">
    <div class="absolute inset-0">
      <img 
        src={heroImage.url} 
        alt={heroImage.alt}
        class="w-full h-full object-cover"
        fetchpriority="high"
        loading="eager"
        decoding="async"
      />
      <div class="absolute inset-0 bg-black/40"></div>
    </div>

    <div class="relative container mx-auto px-6 py-32 md:py-40">
      <div class="max-w-4xl">
        <p class="text-xl md:text-2xl text-white/90 mb-4 font-light leading-relaxed">
          {isLocal ? "There's a place for you here." : "Visiting the Lake of the Ozarks?"}
        </p>
        <h1 class="text-5xl md:text-7xl font-semibold text-white mb-8 leading-tight tracking-tight">
          {isLocal ? "Worship With Us" : "Join Us for Worship"}
        </h1>
        <p class="text-lg md:text-xl text-white/80 mb-12 max-w-2xl font-light leading-relaxed">
          {isLocal 
            ? "Join us in worship as we celebrate God's love and grace together. All are welcome at Christ's table."
            : "Whether you're here for a weekend or an extended stay, we invite you to experience our welcoming community."}
        </p>
        
        <div class="flex flex-col sm:flex-row gap-4">
          <a 
            href="#visit"
            class="inline-flex items-center justify-center px-8 py-4 bg-brand hover:bg-brand-dark text-white font-medium rounded-lg transition-all duration-300 text-lg"
          >
            Service Times
          </a>
          <a 
            href="/live?utm_source=lakeozarkdisciples&utm_medium=worship_page&utm_campaign=hero&utm_content=watch_online" 
            class="inline-flex items-center justify-center px-8 py-4 bg-transparent border-2 border-white text-white hover:bg-white hover:text-gray-900 font-medium rounded-lg transition-all duration-300 text-lg"
          >
            Watch Online
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Visit Us Section with Map -->
  <section id="visit" class="py-20 bg-white">
    <div class="container mx-auto px-6">
      <div class="max-w-7xl mx-auto">
        <div class="grid lg:grid-cols-2 gap-16 items-center">
          <div>
            <span class="inline-block px-4 py-2 bg-brand/10 text-brand text-sm font-medium mb-6">
              Join us
            </span>
            <h2 class="text-4xl lg:text-5xl font-light mb-8 text-gray-900 leading-tight">
              Sunday worship
            </h2>
            <div class="space-y-6">
              <p class="text-lg text-gray-600 leading-relaxed">
                Every Sunday we gather to worship, learn, and grow together. Come as you are — no dress code, no judgment, just a community seeking to follow Jesus.
              </p>
              <div class="bg-gray-50 rounded-xl p-6 space-y-4">
                <div class="flex items-start gap-3">
                  <svg class="w-6 h-6 text-brand mt-1 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                  </svg>
                  <div>
                    <h3 class="font-medium text-gray-900">Sundays at 10:30 AM</h3>
                    <p class="text-gray-600">About an hour — worship, message, and fellowship</p>
                  </div>
                </div>
                <div class="flex items-start gap-3">
                  <svg class="w-6 h-6 text-brand mt-1 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                  </svg>
                  <div>
                    <h3 class="font-medium text-gray-900">1560 Bagnell Dam Blvd</h3>
                    <p class="text-gray-600">Lake Ozark, MO 65049 · Free parking available</p>
                  </div>
                </div>
                <div class="flex items-start gap-3">
                  <svg class="w-6 h-6 text-brand mt-1 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0z"></path>
                  </svg>
                  <div>
                    <h3 class="font-medium text-gray-900">Children's programs</h3>
                    <p class="text-gray-600">Nursery and children's church available during service</p>
                  </div>
                </div>
              </div>
              <div class="flex flex-col sm:flex-row gap-4">
                <a 
                  href="https://www.google.com/maps/dir//Lake+Ozark+Christian+Church,+1560+Bagnell+Dam+Blvd,+Lake+Ozark,+MO+65049?utm_source=lakeozarkdisciples&utm_medium=worship_page&utm_campaign=visit_section&utm_content=get_directions"
                  target="_blank"
                  rel="noopener noreferrer"
                  class="inline-flex items-center justify-center px-8 py-4 bg-brand hover:bg-brand-dark text-white font-medium rounded-lg transition-all duration-300"
                >
                  Get Directions
                </a>
                <a 
                  href="tel:573-365-3366"
                  class="inline-flex items-center justify-center px-8 py-4 bg-gray-900 hover:bg-gray-800 text-white font-medium rounded-lg transition-all duration-300"
                >
                  Call Us
                </a>
              </div>
            </div>
          </div>
          <div class="relative hidden lg:block">
            <LocationMap height="600px" showRoute={true} containerId="worship-map" />
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- What to Expect Section -->
  <section id="what-to-expect" class="py-20 bg-white">
    <div class="container mx-auto px-6">
      <div class="max-w-7xl mx-auto">
        <div class="grid lg:grid-cols-2 gap-16 items-center">
          <!-- Image on LEFT -->
          <div class="relative hidden lg:block">
            <img 
              src="https://usercontent.donorkit.io/clients/LOCC/7767E813-185B-48B7-A7C8-A5C919258FEA%20(1).jpeg"
              alt="Church sanctuary during worship"
              class="w-full h-[500px] object-cover rounded-2xl"
            />
          </div>
          <!-- Text on RIGHT -->
          <div>
            <span class="inline-block px-4 py-2 bg-brand/10 text-brand text-sm font-medium mb-6">
              First time?
            </span>
            <h2 class="text-4xl lg:text-5xl font-light mb-8 text-gray-900 leading-tight">
              What to Expect
            </h2>
            <div class="space-y-6">
              <p class="text-lg text-gray-600 leading-relaxed">
                We want your first visit to be comfortable. Here's what a typical Sunday looks like.
              </p>
              <div class="bg-gray-50 rounded-xl p-6 space-y-4">
                <div class="flex items-start gap-3">
                  <svg class="w-6 h-6 text-brand mt-1 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z" />
                  </svg>
                  <div>
                    <h3 class="font-medium text-gray-900">Warm Welcome</h3>
                    <p class="text-gray-600">Greeters will help you find your way and answer any questions</p>
                  </div>
                </div>
                <div class="flex items-start gap-3">
                  <svg class="w-6 h-6 text-brand mt-1 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19V6l12-3v13M9 19c0 1.105-1.343 2-3 2s-3-.895-3-2 1.343-2 3-2 3 .895 3 2zm12-3c0 1.105-1.343 2-3 2s-3-.895-3-2 1.343-2 3-2 3 .895 3 2zM9 10l12-3" />
                  </svg>
                  <div>
                    <h3 class="font-medium text-gray-900">Uplifting Music</h3>
                    <p class="text-gray-600">A blend of contemporary and traditional hymns</p>
                  </div>
                </div>
                <div class="flex items-start gap-3">
                  <svg class="w-6 h-6 text-brand mt-1 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
                  </svg>
                  <div>
                    <h3 class="font-medium text-gray-900">Relevant Message</h3>
                    <p class="text-gray-600">Bible-based teaching that connects with everyday life</p>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Calendar Section -->
  <SundayCalendar />
</Layout>

<style>
  * {
    font-family: 'Albert Sans', system-ui, sans-serif;
  }
  
  h1, h2, h3, h4, h5, h6 {
    font-family: 'Albert Sans', system-ui, sans-serif;
  }
</style>
