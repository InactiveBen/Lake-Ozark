---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Worship With Us">
  <div class="container mx-auto px-4 py-16">
    <div class="max-w-4xl mx-auto">
      <h1 class="text-5xl font-bold mb-12 text-center">Worship With Us</h1>
      
      <div class="space-y-12">
        <!-- In-Person Worship -->
        <section class="bg-white p-8 rounded-2xl shadow-lg">
          <h2 class="text-3xl font-bold mb-6">Sunday Worship</h2>
          <div class="space-y-4">
            <p class="text-xl text-gray-600">Join us every Sunday at 10:30 AM for worship and fellowship.</p>
            <div class="grid md:grid-cols-2 gap-8 mt-8">
              <div class="bg-gray-50 p-6 rounded-xl">
                <h3 class="text-xl font-bold mb-4">Location</h3>
                <address class="not-italic text-gray-600">
                  1560 Bagnell Dam Blvd.<br>
                  Lake Ozark, MO 65049
                </address>
              </div>
              <div class="bg-gray-50 p-6 rounded-xl">
                <h3 class="text-xl font-bold mb-4">Service Time</h3>
                <p class="text-gray-600">Sundays at 10:30 AM</p>
                <p class="mt-2 text-gray-500">Arrive early for fellowship</p>
              </div>
            </div>
          </div>
        </section>

        <!-- Online Worship -->
        <section class="bg-white p-8 rounded-2xl shadow-lg">
          <h2 class="text-3xl font-bold mb-6">Watch Online</h2>
          <div class="space-y-4">
            <p class="text-xl text-gray-600">Can't join us in person? Watch our services live on YouTube!</p>
            <div class="mt-6">
              <a href="https://www.youtube.com/channel/UCUcLKfZo5Su6-ypmt1dkPKA" 
                 target="_blank"
                 class="inline-flex items-center gap-2 bg-brand text-white px-6 py-3 rounded-full hover:bg-brand-dark transition">
                <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M23.498 6.186a3.016 3.016 0 0 0-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 0 0 .502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 0 0 2.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.377-.505a3.015 3.015 0 0 0 2.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814z"/>
                </svg>
                Watch Live on YouTube
              </a>
            </div>
          </div>
        </section>

        <!-- What to Expect -->
        <section class="bg-white p-8 rounded-2xl shadow-lg">
          <h2 class="text-3xl font-bold mb-6">What to Expect</h2>
          <div class="grid md:grid-cols-2 gap-8">
            <div>
              <h3 class="text-xl font-bold mb-4">Our Service</h3>
              <ul class="space-y-3">
                <li class="flex items-start gap-3">
                  <svg class="w-6 h-6 text-brand mt-1 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                    <path d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z"/>
                  </svg>
                  <span class="text-gray-600">Welcoming atmosphere</span>
                </li>
                <li class="flex items-start gap-3">
                  <svg class="w-6 h-6 text-brand mt-1 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                    <path d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z"/>
                  </svg>
                  <span class="text-gray-600">Contemporary and traditional music</span>
                </li>
                <li class="flex items-start gap-3">
                  <svg class="w-6 h-6 text-brand mt-1 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                    <path d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z"/>
                  </svg>
                  <span class="text-gray-600">Engaging message</span>
                </li>
              </ul>
            </div>
            <div>
              <h3 class="text-xl font-bold mb-4">For Families</h3>
              <ul class="space-y-3">
                <li class="flex items-start gap-3">
                  <svg class="w-6 h-6 text-brand mt-1 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                    <path d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z"/>
                  </svg>
                  <span class="text-gray-600">Children's programs available</span>
                </li>
                <li class="flex items-start gap-3">
                  <svg class="w-6 h-6 text-brand mt-1 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                    <path d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z"/>
                  </svg>
                  <span class="text-gray-600">Family-friendly environment</span>
                </li>
                <li class="flex items-start gap-3">
                  <svg class="w-6 h-6 text-brand mt-1 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                    <path d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z"/>
                  </svg>
                  <span class="text-gray-600">Nursery care available</span>
                </li>
              </ul>
            </div>
          </div>
        </section>
      </div>
    </div>
  </div>
</Layout>