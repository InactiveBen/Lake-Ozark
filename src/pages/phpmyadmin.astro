---
import Layout from '../layouts/Layout.astro';

const clientIP = Astro.request.headers.get('cf-connecting-ip') || 
                 Astro.request.headers.get('x-forwarded-for') || 
                 'unknown';
const userAgent = Astro.request.headers.get('user-agent') || 'unknown';
console.warn(`[BLOCKED] Security probe: /phpmyadmin | IP: ${clientIP} | UA: ${userAgent} | Time: ${new Date().toISOString()}`);

Astro.response.status = 403;
Astro.response.statusText = 'Forbidden';
---
<Layout title="Forbidden">
  <head>
    <meta name="robots" content="noindex, nofollow" />
  </head>
  <section class="min-h-[60vh] flex flex-col justify-center items-center text-center py-24">
    <h1 class="text-6xl font-bold text-red-600 mb-4">403</h1>
    <h2 class="text-2xl font-semibold text-gray-800 mb-2">Forbidden</h2>
    <p class="text-gray-600 mb-6 max-w-xl">
      Access denied.
    </p>
    <a href="/" class="inline-block px-6 py-3 bg-brand text-white rounded-lg hover:bg-brand-dark transition">
      Go Home
    </a>
  </section>
</Layout>

