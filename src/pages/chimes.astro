---
import Layout from '../layouts/Layout.astro';
import Slideshow from '../components/Slideshow.astro';

const heroImages = [
  {
    url: "https://www.tiptopwebsite.com/photos3/bestqualityaudioproductions/loccsanct.jpg",
    alt: "Church Sanctuary"
  }
];

const mailchimpSignupUrl = "https://lakeozarkdisciples.us7.list-manage.com/subscribe?u=9816d09f0ebdd5f8ce1af28b4&id=b26607b7c1";
const mailchimpArchiveUrl = "https://us7.campaign-archive.com/home/?u=9816d09f0ebdd5f8ce1af28b4&id=b26607b7c1";
const mailtoLink = "mailto:office@lakeozarkdisciples.org?subject=Newsletter%20Help";
---

<Layout title="Lake Chimes Newsletter">
  <!-- Hero Section -->
  <div class="relative">
    <div class="absolute inset-0">
      <Slideshow images={heroImages} />
      <div class="absolute inset-0 bg-black/50"></div>
    </div>

    <div class="relative min-h-[40vh] flex items-center">
      <div class="container mx-auto px-4 py-16 text-center text-white">
        <h1 class="text-5xl md:text-6xl font-bold mb-4">Lake Chimes Newsletter</h1>
        <p class="text-xl md:text-2xl mb-8 max-w-3xl mx-auto">
          Stay connected with our church community through our monthly newsletter.
        </p>
      </div>
    </div>
  </div>

  <div class="container mx-auto px-4 py-16">
    <div class="max-w-4xl mx-auto space-y-12">
      <!-- Introduction -->
      <div class="bg-white p-8 rounded-2xl shadow-lg">
        <h2 class="text-3xl font-bold mb-6">Stay Connected</h2>
        <p class="text-xl text-gray-600">
          Lake Chimes is our monthly newsletter, keeping our community informed about upcoming events, 
          important announcements, and inspiring stories from our congregation.
        </p>
      </div>

      <!-- Subscribe Section -->
      <div class="bg-white p-8 rounded-2xl shadow-lg">
        <div class="grid md:grid-cols-2 gap-8 items-center">
          <div>
            <h2 class="text-2xl font-bold mb-4">Subscribe to Lake Chimes</h2>
            <p class="text-gray-600 mb-6">
              Get Lake Chimes delivered directly to your inbox each month. Stay up-to-date with church news, 
              events, and inspiring stories from our community.
            </p>
            <a 
              href={mailchimpSignupUrl}
              target="_blank"
              class="inline-flex items-center gap-2 bg-brand text-white px-6 py-3 rounded-full hover:bg-brand-dark transition"
            >
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                <path d="M2.003 5.884L10 9.882l7.997-3.998A2 2 0 0016 4H4a2 2 0 00-1.997 1.884z"/>
                <path d="M18 8.118l-8 4-8-4V14a2 2 0 002 2h12a2 2 0 002-2V8.118z"/>
              </svg>
              Subscribe Now
            </a>
          </div>
          <div class="p-6 bg-gray-50 rounded-xl">
            <h3 class="font-semibold mb-4">What you'll receive:</h3>
            <ul class="space-y-3">
              <li class="flex items-center gap-3">
                <svg class="w-5 h-5 text-brand" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                </svg>
                <span>Monthly church updates</span>
              </li>
              <li class="flex items-center gap-3">
                <svg class="w-5 h-5 text-brand" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                </svg>
                <span>Upcoming events</span>
              </li>
              <li class="flex items-center gap-3">
                <svg class="w-5 h-5 text-brand" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                </svg>
                <span>Community stories</span>
              </li>
            </ul>
          </div>
        </div>
      </div>

      <!-- Newsletter Archive -->
      <div class="bg-white p-8 rounded-2xl shadow-lg">
        <h2 class="text-2xl font-bold mb-6">Newsletter Archive</h2>
        <p class="text-gray-600 mb-6">
          Browse through our past newsletters to catch up on church news and events you might have missed.
        </p>
        <a 
          href={mailchimpArchiveUrl}
          target="_blank"
          class="inline-flex items-center gap-2 bg-gray-100 text-gray-800 px-6 py-3 rounded-full hover:bg-gray-200 transition"
        >
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M4 4a2 2 0 012-2h4.586A2 2 0 0112 2.586L15.414 6A2 2 0 0116 7.414V16a2 2 0 01-2 2H6a2 2 0 01-2-2V4zm2 6a1 1 0 011-1h6a1 1 0 110 2H7a1 1 0 01-1-1zm1 3a1 1 0 100 2h6a1 1 0 100-2H7z" clip-rule="evenodd" />
          </svg>
          View Newsletter Archive
        </a>
      </div>

      <!-- Help Section -->
      <div class="bg-gray-50 p-8 rounded-2xl text-center">
        <p class="text-gray-600">
          Having trouble accessing the newsletter? 
          <a href={mailtoLink} class="text-brand hover:text-brand-dark">Contact us</a> for assistance.
        </p>
      </div>
    </div>
  </div>
</Layout>
