    try {
      thumbnailGenerator = await import('../utils/clientThumbnailGenerator.js');
    } catch (error) {
      console.warn('Failed to load thumbnail generator:', error);
    }
  }

  async function initLiturgicalCalendar() {
    try {
      // Use the client-side thumbnail generator which has getLiturgicalSeason
      liturgicalCalendar = await import('../utils/clientThumbnailGenerator.js');
    } catch (error) {
