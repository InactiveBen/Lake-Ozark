---
// Define the destination URL
const destination = 'https://donorkit.io/report';

// 302: Temporary Redirect (standard for general use)
// Use 301 for a permanent, SEO-friendly move.
const STATUS_CODE = 302; 

// Return a standard Web Response object. This is the manual, reliable way
// to handle redirects without relying on the 'astro:redirect' import.
return new Response(null, {
    status: STATUS_CODE, 
    headers: {
        'Location': destination, 
    },
});
