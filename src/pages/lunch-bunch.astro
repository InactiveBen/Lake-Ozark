// Helper function to format date
function formatDate(dateStr: string): string {
  const date = new Date(dateStr + 'T12:00:00');
  return date.toLocaleDateString('en-US', {
    weekday: 'long',
    month: 'long',
    day: 'numeric'
  });
}

// Helper to generate Google Maps link
function getMapsLink(restaurant: string, address: string): string {
  const query = encodeURIComponent(`${restaurant}, ${address}`);
  return `https://www.google.com/maps/search/?api=1&query=${query}`;
}

// Group by month
const monthGroups: Record<string, typeof lunchSchedule> = {};
lunchSchedule.forEach(lunch => {
  const date = new Date(lunch.date + 'T12:00:00');
  const monthKey = date.toLocaleDateString('en-US', { month: 'long', year: 'numeric' });
  if (!monthGroups[monthKey]) {
    monthGroups[monthKey] = [];
  }
  monthGroups[monthKey].push(lunch);
});
