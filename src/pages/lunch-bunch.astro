  function formatDateNice(dateStr: string): string {
    const date = new Date(dateStr + 'T12:00:00');
    return date.toLocaleDateString('en-US', {
      weekday: 'long',
      month: 'long',
      day: 'numeric'
    });
  }

  function getMapsLink(restaurant: string, address: string): string {
    const query = encodeURIComponent(`${restaurant}, ${address}`);
    return `https://www.google.com/maps/search/?api=1&query=${query}`;
  }

  function updateNextLunch() {
    const today = new Date();
    today.setHours(0, 0, 0, 0);

    // Find the next upcoming lunch
    const nextLunch = lunchSchedule.find(lunch => {
      const lunchDate = new Date(lunch.date + 'T12:00:00');
      lunchDate.setHours(0, 0, 0, 0);
      return lunchDate >= today;
    });

    const restaurantEl = document.getElementById('next-restaurant');
    const dateEl = document.getElementById('next-date');
    const addressEl = document.getElementById('next-address');
    const directionsEl = document.getElementById('next-directions') as HTMLAnchorElement;

    if (nextLunch && restaurantEl && dateEl && addressEl && directionsEl) {
      restaurantEl.textContent = nextLunch.restaurant;
      dateEl.textContent = formatDateNice(nextLunch.date);
      addressEl.textContent = nextLunch.address;
      directionsEl.href = getMapsLink(nextLunch.restaurant, nextLunch.address);

      // Highlight the next lunch in the schedule
      const lunchItems = document.querySelectorAll('.lunch-item');
      lunchItems.forEach(item => {
        const itemDate = item.getAttribute('data-date');
        if (itemDate === nextLunch.date) {
          item.classList.add('ring-2', 'ring-brand', 'bg-brand/5');
        }
      });
    } else if (restaurantEl) {
      restaurantEl.textContent = "See you next year!";
      if (dateEl) dateEl.textContent = "The 2026 schedule has concluded";
      if (addressEl) addressEl.textContent = "";
      if (directionsEl) directionsEl.style.display = 'none';
    }
  }

  // Run on page load
  document.addEventListener('DOMContentLoaded', updateNextLunch);
  
  // Also run immediately in case DOMContentLoaded already fired
  if (document.readyState !== 'loading') {
    updateNextLunch();
  }
