---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Page Not Found">
  <div class="min-h-[70vh] flex items-center justify-center">
    <div class="container mx-auto px-4">
      <div class="max-w-2xl mx-auto text-center">
        <h1 class="text-9xl font-bold text-brand mb-4">404</h1>
        <h2 class="text-3xl font-bold mb-6">Page Not Found</h2>
        <p class="text-xl text-gray-600 mb-8">
          Like a lost sheep, this page has wandered away.<br>
          But don't worry - the Good Shepherd always leads us home.
        </p>
        <a 
          href="/" 
          class="inline-flex items-center gap-2 bg-brand text-white px-8 py-3 rounded-full hover:bg-brand-dark transition transform hover:scale-105"
        >
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M9.707 14.707a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414l4-4a1 1 0 011.414 1.414L7.414 9H15a1 1 0 110 2H7.414l2.293 2.293a1 1 0 010 1.414z" clip-rule="evenodd" />
          </svg>
          Return Home
        </a>
      </div>
    </div>
  </div>
</Layout>
