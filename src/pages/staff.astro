---
import Layout from '../layouts/Layout.astro';

const heroImage = {
  url: "https://cdn-locc-org.vercel.app/media/69CA977C-2462-4E2A-B067-A2FCD5D87A3F.jpeg",
  alt: "Church Sanctuary"
};

const staff = [
  {
    name: "Rev. Ron Trimmer",
    title: "Senior Minister",
    image: "https://cdn-locc-org.vercel.app/media/0AB4CB10-0C10-487F-BE24-28F19AD01DBB.jpeg",
    bio: "Pastor Ron Trimmer serves as the senior minister at Lake Ozark Christian Church. With over 25 years in ministry, he brings deep faith, compassion, and a strong sense of calling to his leadership. Pastor Ron believes in a God of extravagant welcome and invites all to experience the transforming love and grace of Jesus Christ. His heart for justice, peace, and renewal shapes every aspect of his ministry. Alongside his wife Wendy and their four children, Pastor Ron continues to lead with hope and a commitment to sharing Godâ€™s love both inside and outside the church walls.",
    showPhoto: true
  },
  {
    name: "Michael Lindeman",
    title: "Director of Music",
    image: "https://cdn-locc-org.vercel.app/media/88041345-79DE-4CC1-9AE1-B2BD94B13DEF.jpeg",
    bio: "Michael Lindeman leads our music ministry with creativity and dedication. His extensive background in music ministry helps create meaningful worship experiences that inspire and uplift our congregation.",
    showPhoto: true
  },
  {
    name: "Angela Edwards",
    title: "Administrative Assistant",
    bio: "Angela Edwards keeps our church operations running smoothly. Her organizational skills and warm personality help coordinate our various ministries and maintain communication with our congregation. Angela ensures that all administrative aspects of church life function efficiently, from managing the church calendar to preparing weekly bulletins and coordinating with ministry leaders.",
    showPhoto: false
  }
];
---

<Layout title="Staff">
<!-- Hero Section - Clean and Minimalist -->
<section class="relative overflow-hidden bg-white">
  <div class="absolute inset-0">
    <img 
      src={heroImage.url} 
      alt={heroImage.alt}
      class="w-full h-full object-cover"
    />
    <div class="absolute inset-0 bg-black/40"></div>
  </div>

  <div class="relative container mx-auto px-6 py-32 md:py-40">
    <div class="max-w-4xl">
      <p class="text-xl md:text-2xl text-white/90 mb-4 font-light leading-relaxed">
        Meet our dedicated team
      </p>
      <h1 class="text-5xl md:text-7xl font-semibold text-white mb-8 leading-tight tracking-tight">
        Our Staff
      </h1>
      <p class="text-lg md:text-xl text-white/80 mb-12 max-w-2xl font-light leading-relaxed">
        Passionate individuals serving our church community with love, dedication, and unwavering faith.
      </p>
      
      <div class="flex flex-col sm:flex-row gap-4">
        <a 
          href="/connect" 
          class="inline-flex items-center justify-center px-8 py-4 bg-brand hover:bg-brand-dark text-white font-medium rounded-lg transition-all duration-300 text-lg"
        >
          Contact Us
        </a>
        <a 
          href="/about" 
          class="inline-flex items-center justify-center px-8 py-4 bg-transparent border-2 border-white text-white hover:bg-white hover:text-gray-900 font-medium rounded-lg transition-all duration-300 text-lg"
        >
          Learn More About Us
        </a>
      </div>
    </div>
  </div>
</section>

<!-- Staff Grid -->
<section class="py-20 bg-white">
  <div class="container mx-auto px-6">
    <div class="max-w-6xl mx-auto">
      <div class="text-center mb-16">
        <span class="inline-block px-4 py-2 bg-brand/10 text-brand text-sm font-medium mb-4">
          Meet the Team
        </span>
        <h2 class="text-4xl lg:text-5xl font-light mb-6 text-gray-900">Staff Members</h2>
        <p class="text-lg text-gray-600 max-w-2xl mx-auto">
          Click on any staff member to learn more about their ministry and background
        </p>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        {staff.map(member => (
          <div 
            class="group cursor-pointer bg-white border border-gray-200 rounded-2xl overflow-hidden hover:shadow-lg transition-all duration-300 hover:-translate-y-1"
            onclick={`showStaffBio(${JSON.stringify(member)})`}
          >
            <div class="aspect-square overflow-hidden">
              {member.showPhoto ? (
                <img 
                  src={member.image} 
                  alt={member.name}
                  class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-500"
                />
              ) : (
                <div class="w-full h-full bg-gradient-to-br from-gray-100 to-gray-200 flex items-center justify-center">
                  <div class="text-center">
                    <div class="w-20 h-20 bg-brand/10 rounded-full mx-auto mb-4 flex items-center justify-center">
                      <svg class="w-10 h-10 text-brand/60" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                      </svg>
                    </div>
                    <p class="text-gray-500 text-sm">Photo Coming Soon</p>
                  </div>
                </div>
              )}
            </div>
            <div class="p-6">
              <h3 class="text-xl font-semibold text-gray-900 mb-2">{member.name}</h3>
              <p class="text-brand font-medium mb-3">{member.title}</p>
              <p class="text-gray-600 text-sm leading-relaxed">Click to learn more about {member.name.split(' ')[0]}'s ministry</p>
            </div>
          </div>
        ))}
      </div>
    </div>
  </div>
</section>

<style>
  * {
    font-family: 'Albert Sans', system-ui, sans-serif;
  }
  
  h1, h2, h3, h4, h5, h6 {
    font-family: 'Albert Sans', system-ui, sans-serif;
  }
</style>
</Layout>

<script>
  declare global {
    interface Window {
      showStaffBio: (member: any) => void;
    }
  }

  function showStaffBio(member) {
    const modal = document.createElement('div');
    modal.className = 'fixed inset-0 bg-black/50 flex items-center justify-center p-4 z-50';
    modal.onclick = (e) => {
      if (e.target === modal) {
        modal.remove();
      }
    };
    
    const photoContent = member.showPhoto 
      ? `<div class="w-32 h-32 rounded-full overflow-hidden mb-6 mx-auto border-4 border-white shadow-lg">
           <img 
             src="${member.image || ''}" 
             alt="${member.name}"
             class="w-full h-full object-cover"
           />
         </div>`
      : `<div class="w-32 h-32 rounded-full bg-gradient-to-br from-brand/10 to-brand/20 flex items-center justify-center mb-6 mx-auto border-4 border-white shadow-lg">
           <svg class="w-16 h-16 text-brand/60" fill="none" stroke="currentColor" viewBox="0 0 24 24">
             <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
           </svg>
         </div>`;
    
    modal.innerHTML = `
      <div class="bg-white rounded-2xl max-w-2xl w-full max-h-[90vh] overflow-y-auto">
        <div class="p-8 text-center">
          <button 
            onclick="this.closest('.fixed').remove()"
            class="absolute top-4 right-4 p-2 hover:bg-gray-100 rounded-full transition-colors"
            aria-label="Close modal"
          >
            <svg class="w-6 h-6 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
            </svg>
          </button>
          
          ${photoContent}
          
          <h2 class="text-3xl font-semibold text-gray-900 mb-2">${member.name}</h2>
          <p class="text-brand text-lg font-medium mb-6">${member.title}</p>
          
          <div class="bg-gray-50 p-6 rounded-xl text-left">
            <p class="text-gray-700 leading-relaxed">${member.bio}</p>
          </div>
        </div>
      </div>
    `;
    
    document.body.appendChild(modal);
  }
  
  window.showStaffBio = showStaffBio;
</script>
