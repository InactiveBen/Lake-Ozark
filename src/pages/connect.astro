---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Connect With Us">
  <div class="container mx-auto px-4 py-16">
    <div class="max-w-4xl mx-auto">
      <h1 class="text-5xl font-bold mb-12 text-center">Connect With Us</h1>
      
      <div class="space-y-12">
        <!-- Contact Information -->
        <section class="bg-white p-8 rounded-2xl shadow-lg">
          <h2 class="text-3xl font-bold mb-6">Get in Touch</h2>
          <div class="grid md:grid-cols-2 gap-8">
            <div>
              <h3 class="text-xl font-bold mb-4">Contact Information</h3>
              <address class="not-italic space-y-2">
                <p>1560 Bagnell Dam Blvd.</p>
                <p>P.O. Box 194</p>
                <p>Lake Ozark, MO 65049</p>
                <p>
                  <a href="tel:573-365-3366" class="text-brand hover:text-brand-dark">
                    Phone: 573-365-3366
                  </a>
                </p>
                <p>
                  <a href="mailto:office@lakeozarkdisciples.org" class="text-brand hover:text-brand-dark">
                    Email: office@lakeozarkdisciples.org
                  </a>
                </p>
              </address>
            </div>
            <div>
              <h3 class="text-xl font-bold mb-4">Office Hours</h3>
              <ul class="space-y-2">
                <li>Monday - Friday</li>
                <li>9:00 AM - 4:00 PM</li>
              </ul>
            </div>
          </div>
        </section>

        <!-- Ways to Connect -->
        <section class="grid md:grid-cols-3 gap-8">
          <div class="bg-blue-50 p-8 rounded-2xl">
            <h3 class="text-xl font-bold mb-4">Join Us for Worship</h3>
            <p class="mb-4">Sunday Service at 10:30 AM</p>
            <a href="/worship" class="text-brand hover:text-brand-dark font-semibold">Learn More →</a>
          </div>

          <div class="bg-purple-50 p-8 rounded-2xl">
            <h3 class="text-xl font-bold mb-4">Watch Online</h3>
            <p class="mb-4">Join us live on YouTube every Sunday</p>
            <a href="https://www.youtube.com/channel/UCUcLKfZo5Su6-ypmt1dkPKA" 
               target="_blank" 
               class="text-brand hover:text-brand-dark font-semibold">Watch Now →</a>
          </div>

          <div class="bg-brand/10 p-8 rounded-2xl">
            <h3 class="text-xl font-bold mb-4">Stay Updated</h3>
            <p class="mb-4">Subscribe to our newsletter</p>
            <a href="/lake-chimes" class="text-brand hover:text-brand-dark font-semibold">Subscribe →</a>
          </div>
        </section>

        <!-- Map -->
        <section class="bg-white p-8 rounded-2xl shadow-lg">
          <h2 class="text-2xl font-bold mb-6">Find Us</h2>
          <div class="aspect-video w-full">
            <iframe 
              src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3131.8896001465897!2d-92.6279899!3d38.1997691!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x87c4c5a3c7b7d6d9%3A0x8b8b8b8b8b8b8b8b!2sLake%20Ozark%20Christian%20Church!5e0!3m2!1sen!2sus!4v1620000000000!5m2!1sen!2sus"
              width="100%"
              height="100%"
              style="border:0;"
              allowfullscreen=""
              loading="lazy"
            ></iframe>
          </div>
        </section>
      </div>
    </div>
  </div>
</Layout>