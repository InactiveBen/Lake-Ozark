---
import Layout from '../layouts/Layout.astro';
import Slideshow from '../components/Slideshow.astro';
import PartnerCard from '../components/PartnerCard.astro';

const heroImages = [
  {
    url: "https://images.unsplash.com/photo-1532629345422-7515f3d16bb6?auto=format&fit=crop&q=80",
    alt: "Helping hands"
  }
];

const services = [
  {
    title: "Pantry of Blessings",
    description: "24/7 access to non-perishable food and hygiene items for emergency needs.",
    icon: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 3h2l.4 2M7 13h10l4-8H5.4M7 13L5.4 5M7 13l-2.293 2.293c-.63.63-.184 1.707.707 1.707H17m0 0a2 2 0 100 4 2 2 0 000-4zm-8 2a2 2 0 11-4 0 2 2 0 014 0z" />`
  },
  {
    title: "Emergency Shelter",
    description: "Assistance with emergency shelter needs through local partnerships.",
    icon: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />`
  },
  {
    title: "Basic Necessities",
    description: "Access to showers and basic facilities for job interviews and essential needs.",
    icon: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12H9m12 0a9 9 0 11-18 0 9 9 0 0118 0z" />`
  },
  {
    title: "Community Support",
    description: "Partnership with local businesses and organizations to provide comprehensive assistance.",
    icon: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z" />`
  }
];

const partners = [
  {
    name: "Dierbergs",
    logo: "https://mrcheckout.net/wp-content/uploads/2022/06/Dierbergs.png",
    url: "https://www.dierbergs.com"
  },
  {
    name: "HyVee",
    logo: "https://upload.wikimedia.org/wikipedia/en/thumb/a/ae/Hy-Vee.svg/1200px-Hy-Vee.svg.png",
    url: "https://www.hy-vee.com"
  },
  {
    name: "Smart Postal Center",
    logo: "https://www.themailboxstore.net/app/uploads/2018/02/SmartShip-300x125.png",
    url: "http://www.smartpostalcenters.com"
  },
  {
    name: "Target",
    logo: "https://static.vecteezy.com/system/resources/previews/027/127/443/non_2x/target-logo-target-icon-transparent-free-png.png",
    url: "https://www.target.com"
  },
  {
    name: "UPS Store",
    logo: "https://media.nbcsandiego.com/2021/10/UPSStore.jpg?quality=85&strip=all&resize=1200%2C675",
    url: "https://www.theupsstore.com"
  },
  {
    name: "Woods",
    logo: "https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcTPIU4q1sXG-b23nA8aSIOId56s40rOD2HOKQ&s",
    url: "https://www.woodssupermarket.com/"
  },
  {
    name: "Hope House of Miller County",
    logo: "https://hopehouseofmillercounty.com/wp-content/uploads/2022/12/Hope-House-Logo-e1511208623755.png",
    url: "https://hopehouseofmillercounty.com"
  }
];
---

<Layout title="Shelter from a Storm">
  <!-- Hero Section -->
  <div class="relative">
    <div class="absolute inset-0">
      <Slideshow images={heroImages} />
      <div class="absolute inset-0 bg-black/50"></div>
    </div>

    <div class="relative min-h-[60vh] flex items-center">
      <div class="container mx-auto px-4 py-16 text-center text-white">
        <h1 class="text-5xl md:text-6xl font-bold mb-4">Shelter from a Storm</h1>
        <p class="text-xl md:text-2xl mb-8 max-w-3xl mx-auto">
          Providing emergency assistance and support to those in need in our community.
        </p>
        
        <div class="flex flex-wrap justify-center gap-4">
          <a 
            href="#pantry" 
            class="bg-brand hover:bg-brand-dark text-white px-8 py-3 rounded-full transition transform hover:scale-105"
          >
            Visit the Pantry
          </a>
          <a 
            href="/connect" 
            class="bg-white hover:bg-gray-100 text-gray-900 px-8 py-3 rounded-full transition transform hover:scale-105"
          >
            Get Help
          </a>
        </div>
      </div>
    </div>
  </div>

  <!-- Introduction -->
  <div class="container mx-auto px-4 py-16">
    <div class="bg-white p-8 rounded-2xl shadow-lg max-w-4xl mx-auto">
      <p class="text-xl text-gray-600">
        Lake Ozark Christian Church's Shelter from a Storm ministry began with a simple act of kindness - 
        providing shelter from the cold to a homeless individual during a Bible study. This moment inspired 
        our congregation to investigate and address the needs in our local community for emergency food and shelter.
      </p>
    </div>
  </div>

  <!-- Pantry of Blessings -->
  <div id="pantry" class="container mx-auto px-4 py-16">
    <div class="bg-white p-8 rounded-2xl shadow-lg max-w-4xl mx-auto">
      <div class="grid md:grid-cols-2 gap-8 items-center">
        <div>
          <h2 class="text-3xl font-bold mb-4">Pantry of Blessings</h2>
          <p class="text-gray-600 mb-6">
            Our Pantry of Blessings provides non-perishable food and hygiene items on an emergency basis, 
            24 hours a day. Located on the west side of the church at 1560 Bagnell Dam Blvd., 
            the pantry is always accessible to those in need.
          </p>
          <div class="flex flex-wrap gap-4">
            <a 
              href="https://maps.google.com/?q=1560+Bagnell+Dam+Blvd,+Lake+Ozark,+MO+65049"
              target="_blank"
              class="inline-flex items-center gap-2 bg-brand text-white px-6 py-2 rounded-full hover:bg-brand-dark transition"
            >
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
              </svg>
              Get Directions
            </a>
          </div>
        </div>
        <div class="rounded-xl overflow-hidden">
          <img 
            src="https://images.squarespace-cdn.com/content/v1/53c68a2de4b0929c16dd9bf2/1623779915649-KOGVC81NLQDLR632328M/ribbon-cutting+photo+best.jpg?format=2500w"
            alt="Pantry of Blessings"
            class="w-full h-full object-cover"
          />
        </div>
      </div>
    </div>
  </div>

  <!-- Services -->
  <div class="container mx-auto px-4 py-16">
    <h2 class="text-3xl font-bold mb-12 text-center">Our Services</h2>
    <div class="grid md:grid-cols-2 gap-8 max-w-6xl mx-auto">
      {services.map(service => (
        <div class="bg-white p-8 rounded-2xl shadow-lg">
          <div class="flex items-start gap-6">
            <div class="p-3 bg-brand/10 rounded-xl text-brand">
              <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <Fragment set:html={service.icon} />
              </svg>
            </div>
            <div>
              <h3 class="text-2xl font-bold mb-4">{service.title}</h3>
              <p class="text-gray-600">{service.description}</p>
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>

  <!-- Community Partners -->
  <div class="container mx-auto px-4 py-16">
    <div class="bg-white p-8 rounded-2xl shadow-lg max-w-6xl mx-auto">
      <h2 class="text-3xl font-bold mb-8 text-center">Our Community Partners</h2>
      <p class="text-xl text-gray-600 text-center mb-12">
        We are grateful for the support of local businesses and organizations that help make our ministry possible.
      </p>
      <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">
        {partners.map(partner => (
          <PartnerCard 
            name={partner.name} 
            logo={partner.logo}
            url={partner.url}
          />
        ))}
      </div>
    </div>
  </div>

  <!-- Get Involved -->
  <div class="container mx-auto px-4 py-16">
    <div class="bg-gray-50 p-8 rounded-2xl text-center max-w-4xl mx-auto">
      <h2 class="text-2xl font-bold mb-4">Get Involved</h2>
      <p class="text-gray-600 mb-6">
        Want to support our ministry or need assistance? We're here to help.
      </p>
      <div class="flex flex-wrap justify-center gap-4">
        <a 
          href="/connect" 
          class="inline-flex items-center gap-2 bg-brand text-white px-8 py-3 rounded-full hover:bg-brand-dark transition"
        >
          Contact Us
        </a>
        <a 
          href="/giving" 
          class="inline-flex items-center gap-2 bg-gray-100 text-gray-800 px-8 py-3 rounded-full hover:bg-gray-200 transition"
        >
          Support Our Ministry
        </a>
      </div>
    </div>
  </div>
</Layout>
