---
import Layout from '../layouts/Layout.astro';
import Slideshow from '../components/Slideshow.astro';

const heroImages = [
  {
    url: "https://cdn-locc-org.vercel.app/media/5.jpg",
    alt: "Church Sanctuary"
  }
];
---

<Layout title="Bylaws">
  <!-- Hero Section -->
  <div class="relative">
    <div class="absolute inset-0">
      <Slideshow images={heroImages} />
      <div class="absolute inset-0 bg-black/50"></div>
    </div>

    <div class="relative min-h-[60vh] flex items-center">
      <div class="container mx-auto px-4 py-16 text-center text-white">
        <h1 class="text-5xl md:text-6xl font-bold mb-4">Church Bylaws</h1>
        <p class="text-xl md:text-2xl mb-8 max-w-3xl mx-auto">
          Our church bylaws outline the governance structure and operational procedures 
          of Lake Ozark Christian Church.
        </p>
      </div>
    </div>
  </div>

  <div class="container mx-auto px-4 py-16">
    <div class="max-w-4xl mx-auto space-y-12">
      <!-- Download Section -->
      <div class="bg-white p-8 rounded-2xl shadow-lg text-center">
        <h2 class="text-3xl font-bold mb-6">Download Our Bylaws</h2>
        <p class="text-xl text-gray-600 mb-8">
          Our church bylaws are available for download in PDF format.
        </p>
        
        <a 
          href="https://cdn.lakeozarkdisciples.org/pdf/Bylaws%20LOCC%20passed%20Nov%202023.pdf" 
          target="_blank"
          class="inline-flex items-center gap-2 bg-brand text-white px-8 py-4 rounded-full hover:bg-brand-dark transition"
        >
          <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 20 20">
            <path d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-11a1 1 0 10-2 0v3.586L7.707 9.293a1 1 0 00-1.414 1.414l3 3a1 1 0 001.414 0l3-3a1 1 0 00-1.414-1.414L11 10.586V7z"/>
          </svg>
          Download Bylaws (PDF)
        </a>
      </div>

      <!-- Last Updated -->
      <div class="bg-gray-50 p-8 rounded-2xl text-center">
        <p class="text-gray-600">Last revised: Nov 2023</p>
      </div>

      <!-- Contact Section -->
      <div class="bg-white p-8 rounded-2xl shadow-lg text-center">
        <h2 class="text-2xl font-bold mb-4">Questions About Our Bylaws?</h2>
        <p class="text-gray-600 mb-6">
          If you have any questions about our church bylaws, please don't hesitate to reach out.
        </p>
        <a 
          href="/connect" 
          class="inline-flex items-center gap-2 bg-brand text-white px-8 py-3 rounded-full hover:bg-brand-dark transition"
        >
          Contact Us
        </a>
      </div>
    </div>
  </div>
</Layout>
