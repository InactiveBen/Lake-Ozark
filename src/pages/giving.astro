---
import Layout from '../layouts/Layout.astro';
import Slideshow from '../components/Slideshow.astro';

const heroImages = [
  {
    url: "https://www.tiptopwebsite.com/photos3/bestqualityaudioproductions/loccsanct.jpg",
    alt: "Church Sanctuary"
  }
];

const givingMethods = [
  {
    title: "Online Banking",
    description: "Set up one-time or recurring contributions through your bank's online bill pay service.",
    icon: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h18M7 15h1m4 0h1m-7 4h12a3 3 0 003-3V8a3 3 0 00-3-3H6a3 3 0 00-3 3v8a3 3 0 003 3z" />`
  },
  {
    title: "Mail Your Gift",
    description: "Send your contribution directly to our church office.",
    icon: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />`
  },
  {
    title: "In-Person Giving",
    description: "Place your gift in the offering plate during Sunday service.",
    icon: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 9V7a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2m2 4h10a2 2 0 002-2v-6a2 2 0 00-2-2H9a2 2 0 00-2 2v6a2 2 0 002 2zm7-5a2 2 0 11-4 0 2 2 0 014 0z" />`
  }
];

const impactAreas = [
  {
    title: "Local Ministries",
    description: "Supporting our community through various outreach programs and services.",
    icon: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />`
  },
  {
    title: "Youth Programs",
    description: "Investing in the next generation through education and spiritual growth.",
    icon: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />`
  },
  {
    title: "Building & Maintenance",
    description: "Maintaining our facilities for worship and community gatherings.",
    icon: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />`
  },
  {
    title: "Mission Support",
    description: "Extending our reach through global missions and partnerships.",
    icon: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3.055 11H5a2 2 0 012 2v1a2 2 0 002 2 2 2 0 012 2v2.945M8 3.935V5.5A2.5 2.5 0 0010.5 8h.5a2 2 0 012 2 2 2 0 104 0 2 2 0 012-2h1.064M15 20.488V18a2 2 0 012-2h3.064" />`
  }
];
---

<Layout title="Giving">
  <!-- Hero Section -->
  <div class="relative">
    <div class="absolute inset-0">
      <Slideshow images={heroImages} />
      <div class="absolute inset-0 bg-black/50"></div>
    </div>

    <div class="relative min-h-[60vh] flex items-center">
      <div class="container mx-auto px-4 py-16 text-center text-white">
        <h1 class="text-5xl md:text-6xl font-bold mb-4">Giving</h1>
        <p class="text-xl md:text-2xl mb-8 max-w-3xl mx-auto">
          Supporting our ministry through faithful stewardship.
          Your generosity helps us share God's love with our community and beyond.
        </p>
        
        <blockquote class="italic text-lg mb-8">
          "Each of you should give what you have decided in your heart to give, not reluctantly or under compulsion, for God loves a cheerful giver."
          <footer class="text-sm mt-2">- 2 Corinthians 9:7</footer>
        </blockquote>
      </div>
    </div>
  </div>

  <!-- Introduction -->
  <div class="container mx-auto px-4 py-16">
    <div class="bg-white p-8 rounded-2xl shadow-lg max-w-4xl mx-auto">
      <p class="text-xl text-gray-600">
        We genuinely thank our supporters for their continuing financial generosity to the ministries 
        of Lake Ozark Christian Church. For those who are considering a visit to us, please understand 
        that you are our guests and we want you to feel no obligation to give.
      </p>
    </div>
  </div>

  <!-- Ways to Give -->
  <div class="container mx-auto px-4 py-16">
    <h2 class="text-3xl font-bold mb-12 text-center">Ways to Give</h2>
    <div class="grid md:grid-cols-3 gap-8 max-w-6xl mx-auto">
      {givingMethods.map(method => (
        <div class="bg-white p-8 rounded-2xl shadow-lg">
          <div class="flex flex-col items-center text-center">
            <div class="p-3 bg-brand/10 rounded-xl text-brand mb-6">
              <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <Fragment set:html={method.icon} />
              </svg>
            </div>
            <h3 class="text-2xl font-bold mb-4">{method.title}</h3>
            <p class="text-gray-600">{method.description}</p>
          </div>
        </div>
      ))}
    </div>
  </div>

  <!-- Mailing Address -->
  <div class="container mx-auto px-4 py-16">
    <div class="bg-white p-8 rounded-2xl shadow-lg max-w-4xl mx-auto text-center">
      <h2 class="text-2xl font-bold mb-6">Mailing Address</h2>
      <address class="not-italic text-xl text-gray-600">
        Lake Ozark Christian Church<br>
        P.O. Box 194<br>
        Lake Ozark, MO 65049
      </address>
    </div>
  </div>

  <!-- Your Impact -->
  <div class="container mx-auto px-4 py-16">
    <h2 class="text-3xl font-bold mb-12 text-center">Your Gift Makes a Difference</h2>
    <div class="grid md:grid-cols-2 gap-8 max-w-6xl mx-auto">
      {impactAreas.map(area => (
        <div class="bg-white p-8 rounded-2xl shadow-lg">
          <div class="flex items-start gap-6">
            <div class="p-3 bg-brand/10 rounded-xl text-brand">
              <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <Fragment set:html={area.icon} />
              </svg>
            </div>
            <div>
              <h3 class="text-2xl font-bold mb-4">{area.title}</h3>
              <p class="text-gray-600">{area.description}</p>
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>

  <!-- Questions Section -->
  <div class="container mx-auto px-4 py-16">
    <div class="bg-gray-50 p-8 rounded-2xl text-center max-w-4xl mx-auto">
      <h2 class="text-2xl font-bold mb-4">Questions About Giving?</h2>
      <p class="text-gray-600 mb-6">
        We're here to help! Contact our church office for any questions about giving or stewardship.
      </p>
      <div class="flex flex-wrap justify-center gap-4">
        <a 
          href="tel:573-365-3366" 
          class="inline-flex items-center gap-2 bg-brand text-white px-8 py-3 rounded-full hover:bg-brand-dark transition"
        >
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
          </svg>
          Call Us
        </a>
        <a 
          href="mailto:office@lakeozarkdisciples.org" 
          class="inline-flex items-center gap-2 bg-gray-100 text-gray-800 px-8 py-3 rounded-full hover:bg-gray-200 transition"
        >
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
          </svg>
          Email Us
        </a>
      </div>
    </div>
  </div>
</Layout>
