---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Calendar">
  <div class="container mx-auto px-4 py-16">
    <div class="max-w-4xl mx-auto">
      <h1 class="text-4xl font-bold mb-12 text-center">Church Calendar</h1>
      
      <div class="bg-white p-8 rounded-2xl shadow-lg">
        <div class="w-full" style="position: relative; padding-bottom: 75%;">
            <iframe 
          src="https://calendar.google.com/calendar/embed?src=lakeozarkdisciples%40gmail.com&ctz=America%2FChicago" 
          style="position: absolute; top: 0; left: 0; width: 100%; height: 100%; border: 0;"
          frameborder="0" 
          scrolling="no"
        ></iframe>
        </div>

        <div class="mt-8 p-6 bg-gray-50 rounded-xl">
          <h2 class="text-2xl font-bold mb-4">Regular Events</h2>
          <ul class="space-y-3">
            <li class="flex items-center gap-3">
              <svg class="w-6 h-6 text-brand flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                <path d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z"/>
              </svg>
              <span>Sunday Worship Service - 10:30 AM</span>
            </li>
            <li class="flex items-center gap-3">
              <svg class="w-6 h-6 text-brand flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                <path d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z"/>
              </svg>
              <span>After-School Program - Summer Break (Resumes Aug 19, 2025)</span>
            </li>
          </ul>
        </div>
      </div>
    </div>
  </div>
</Layout>
