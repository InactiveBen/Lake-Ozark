---
import Layout from '../layouts/Layout.astro';
import Slideshow from '../components/Slideshow.astro';

const heroImages = [
  {
    url: "https://cdn-locc-org.vercel.app/media/E88583FB-D8A2-4D0E-8391-7D97D11B710F.jpeg",
    alt: "Children's Time"
  }
];

const programs = [
  {
    title: "Amos and Friends",
    time: "Sundays during 10:30 AM Service",
    description: "An interactive puppet show featuring Amos the Mouse and Pastor Ron"
  },
  {
    title: "Children's Church",
    time: "Sundays during 10:30 AM Service",
    description: "Learning about God's love through lessons, crafts, and play"
  },
  {
    title: "After-School Program",
    time: "Summer Break - Resumes Aug 19, 2025",
    description: "Free program for K-5th grade with transportation provided"
  }
];

const features = [
  {
    title: "Amos and Friends & Children's Church",
    description: "Every Sunday morning at our 10:30 am Worship Service, our youngest are invited to come forward for some time with Amos and Friends (an interactive puppet show featuring Amos the Mouse and Pastor Ron). After Amos, the children are invited to Children's Church where they learn about God's love through learning, craft, and play.",
    icon: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />`
  },
  {
    title: "Wednesday After-School Program",
    description: "Lake Ozark Christian Church offers a free after-school program for children, grades Kindergarten through 5th grade (Heritage and Upper Elementary Schools), on Wednesdays from 3:30pm to 5:30pm during the school year. Currently on summer break, the program will resume August 19, 2025 for the 2025-2026 school year. We will transport the children from school to the church building. We will provide a snack, games and activities, and a brief lesson. A parent or guardian will need to pick up their children by 5:30pm. There is no cost to attend this program.",
    icon: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />`
  },
  {
    title: "Pastor's Baptism Class",
    description: "It is the practice of the Disciples of Christ to baptize folks when they are ready to accept Jesus as their Lord and Savior and seek to follow him as his disciple. To help young people in their faith, Pastor Ron teaches a Baptism class to prepare them.",
    icon: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 18h.01M8 21h8a2 2 0 002-2V5a2 2 0 00-2-2H8a2 2 0 00-2 2v14a2 2 0 002 2z" />`
  },
  {
    title: "Boy Scouts",
    description: "Lake Ozark Christian Church is a proud sponsor of Boy Scout and Cub Scout Pack #21.",
    icon: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3.055 11H5a2 2 0 012 2v1a2 2 0 002 2 2 2 0 012 2v2.945M8 3.935V5.5A2.5 2.5 0 0010.5 8h.5a2 2 0 012 2 2 2 0 104 0 2 2 0 012-2h1.064M15 20.488V18a2 2 0 012-2h3.064" />`
  }
];
---

<Layout title="Children & Youth">
  <!-- Hero Section -->
  <div class="relative">
    <div class="absolute inset-0">
      <Slideshow images={heroImages} />
      <div class="absolute inset-0 bg-black/50"></div>
    </div>

    <div class="relative min-h-[60vh] flex items-center">
      <div class="container mx-auto px-4 py-16 text-center text-white">
        <h1 class="text-5xl md:text-6xl font-bold mb-4">Children & Youth</h1>
        <p class="text-xl md:text-2xl mb-8 max-w-3xl mx-auto">
          A community of faith dedicated to nurturing young hearts and minds in Christ's love.
        </p>
        
        <div class="grid md:grid-cols-3 gap-6 max-w-4xl mx-auto">
          {programs.map(program => (
            <div class="bg-white/10 backdrop-blur-sm p-6 rounded-xl">
              <h2 class="text-lg font-bold mb-2">{program.title}</h2>
              <p class="text-sm mb-2">{program.time}</p>
              <p class="text-sm">{program.description}</p>
            </div>
          ))}
        </div>
      </div>
    </div>
  </div>

  <!-- After School Program -->
  <div class="container mx-auto px-4 py-16">
    <div class="bg-white p-8 rounded-2xl shadow-lg max-w-4xl mx-auto">
      <div class="grid md:grid-cols-2 gap-8 items-center">
        <div>
          <h2 class="text-3xl font-bold mb-4">After-School Program</h2>
          <div class="bg-yellow-50 border-l-4 border-yellow-400 p-4 mb-4">
            <p class="text-yellow-800 font-semibold">Currently on Summer Break</p>
            <p class="text-yellow-700 text-sm">Program resumes August 19, 2025 for the 2025-2026 school year</p>
          </div>
          <p class="text-gray-800 mb-4">
            Join our free after-school program for K-5th grade students from Heritage and Upper Elementary Schools. 
            We provide transportation, snacks, activities, and a nurturing environment every Wednesday during the school year.
          </p>
          <div class="flex flex-wrap gap-4">
            <a 
              href="https://docs.google.com/forms/d/e/1FAIpQLSdIri3EaabwsN84Al7Xd7zVnWI7Jzfaoyu6NVkENI6w9FRaeA/viewform?usp=sf_link"
              target="_blank"
              rel="noopener noreferrer" 
              class="inline-block bg-brand text-white px-6 py-2 rounded-full hover:bg-brand-dark transition"
            >
              Register for 2025-2026 School Year
            </a>
          </div>
        </div>
        <div class="rounded-xl overflow-hidden">
          <img 
            src="https://cdn.lakeozarkdisciples.org/images/IMG_2755.jpg"
            alt="Amos and Friends puppet show with children"
            class="w-full h-full object-cover"
          />
        </div>
      </div>
    </div>
  </div>

  <!-- Programs Grid -->
  <div class="container mx-auto px-4 py-16">
    <h2 class="text-3xl font-bold mb-12 text-center">Our Programs</h2>
    <div class="grid md:grid-cols-2 gap-8 max-w-6xl mx-auto">
      {features.map(feature => (
        <div class="bg-white p-8 rounded-2xl shadow-lg">
          <div class="flex items-start gap-6">
            <div class="p-3 bg-brand/10 rounded-xl text-brand">
              <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <Fragment set:html={feature.icon} />
              </svg>
            </div>
            <div>
              <h3 class="text-2xl font-bold mb-4">{feature.title}</h3>
              <p class="text-gray-600">{feature.description}</p>
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>

  <!-- Scripture Quote -->
  <div class="container mx-auto px-4 py-16">
    <div class="bg-gray-50 p-8 rounded-2xl text-center max-w-4xl mx-auto">
      <blockquote class="text-xl italic text-gray-600 mb-4">
        "Let the little children come to me, and do not stop them; for it is to such as these that the kingdom of heaven belongs."
      </blockquote>
      <p class="text-gray-500">- Matthew 19:14</p>
    </div>
  </div>

  <!-- Contact Section -->
  <div class="container mx-auto px-4 py-16">
    <div class="bg-white p-8 rounded-2xl shadow-lg max-w-4xl mx-auto text-center">
      <h2 class="text-2xl font-bold mb-4">Get Involved</h2>
      <p class="text-gray-600 mb-6">
        Want to learn more about our children's programs or get involved? 
        We'd love to hear from you!
      </p>
      <div class="flex flex-wrap justify-center gap-4">
        <a 
          href="/connect" 
          class="inline-flex items-center gap-2 bg-brand text-white px-8 py-3 rounded-full hover:bg-brand-dark transition"
        >
          Contact Us
        </a>
        <a 
          href="https://docs.google.com/forms/d/e/1FAIpQLSdIri3EaabwsN84Al7Xd7zVnWI7Jzfaoyu6NVkENI6w9FRaeA/viewform?usp=sf_link"
          target="_blank"
          rel="noopener noreferrer"
          class="inline-flex items-center gap-2 bg-gray-100 text-gray-800 px-8 py-3 rounded-full hover:bg-gray-200 transition"
        >
          Register for 2025-2026 After-School Program
        </a>
      </div>
    </div>
  </div>
</Layout>
